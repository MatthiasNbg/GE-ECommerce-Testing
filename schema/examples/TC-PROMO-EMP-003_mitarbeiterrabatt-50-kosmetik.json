{
  "test_id": "TC-PROMO-EMP-003",
  "name": "Mitarbeiterrabatt 50% auf Kosmetik einzeln einloesen",
  "category": "e2e",
  "priority": "P1",
  "functional_area": "Feature Promotion",
  "schema_version": "3.0.0",
  "scope": {
    "environments": [
      "staging"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar (Staging)",
    "Promotion-Code MA-KOSMETIK50 ist aktiv (50% auf Kosmetik via Werbemittel-ID)",
    "Kosmetik-Produkt mit passender advertising_material_id ist verfuegbar"
  ],
  "postconditions": [
    "50%-Rabatt wird korrekt auf Kosmetik-Produkt angewendet",
    "Rabattberechnung ist korrekt (Toleranz 5%)"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Kosmetik-Produkt zum Warenkorb hinzufuegen",
      "expected": "Produkt ist im Warenkorb",
      "inputs": [
        {
          "action": "navigate",
          "value_ref": "product:lip_balm.path"
        },
        {
          "action": "click",
          "selector": "button.btn-buy"
        }
      ]
    },
    {
      "step": 2,
      "action": "Zum Warenkorb navigieren und Preis erfassen",
      "expected": "Warenkorb zeigt Produkt mit gueltigem Preis > 0",
      "inputs": [
        {
          "action": "navigate",
          "value": "/checkout/cart"
        }
      ]
    },
    {
      "step": 3,
      "action": "Mitarbeiterrabatt-Code 50% Kosmetik einloesen",
      "expected": "Code wird akzeptiert, Rabattzeile erscheint",
      "inputs": [
        {
          "action": "fill",
          "selector": "input[name='promotionCode']",
          "value_ref": "promo:employee_kosmetik.code"
        },
        {
          "action": "click",
          "selector": "button:has-text('Einloesen')"
        }
      ]
    },
    {
      "step": 4,
      "action": "Rabattzeile im Warenkorb pruefen",
      "expected": "Mitarbeiterrabatt-Zeile wird im Warenkorb angezeigt"
    },
    {
      "step": 5,
      "action": "Preisaenderung validieren (50% Rabatt)",
      "expected": "Gesamtpreis ist ca. 50% niedriger als vorher (Toleranz 5%)"
    }
  ],
  "test_data": [
    {
      "type": "channel",
      "name": "AT"
    },
    {
      "type": "extra",
      "name": "promo_code",
      "code": "MA-KOSMETIK50",
      "discount_percentage": 50,
      "target": "cosmetics_only"
    },
    {
      "type": "extra",
      "name": "product",
      "path": "p/lippenbalsam-mit-bio-bienenwachs/ge-p-60780",
      "product_name": "Lippenbalsam mit Bio-Bienenwachs",
      "category": "Kosmetik"
    },
    {
      "type": "product",
      "name": "lip_balm",
