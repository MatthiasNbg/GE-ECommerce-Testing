    },
    {
      "step": 3,
      "action": "Formular absenden",
      "expected": "Formular wird abgeschickt",
      "inputs": [{"action": "check", "selector": "#acceptedDataProtection"}, {"action": "click", "selector": "button:has-text('Registrieren')"}]
    },
    {
      "step": 4,
      "action": "Validierungsfehler prüfen",
      "expected": "Validierungsfehlermeldung für ungültige E-Mail wird angezeigt"
