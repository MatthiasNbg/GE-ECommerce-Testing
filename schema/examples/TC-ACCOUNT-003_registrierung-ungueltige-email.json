{
  "test_id": "TC-ACCOUNT-003",
  "name": "Registrierung mit ungültiger E-Mail zeigt Fehler",
  "category": [
    "e2e"
  ],
  "priority": "P1",
  "functional_area": "Feature Account",
  "schema_version": "3.0.0",
  "scope": {
    "environments": [
      "staging"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Registrierungsseite ist erreichbar"
  ],
  "postconditions": [
    "Kein Account wurde angelegt"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Registrierungsseite aufrufen",
      "expected": "Registrierungsformular wird angezeigt",
      "inputs": [
        {
          "action": "navigate",
          "value": "/account/login"
        }
      ]
    },
    {
      "step": 2,
      "action": "Ungültige E-Mail eingeben",
      "expected": "Ungültige E-Mail-Adresse ist im Formular eingetragen",
      "inputs": [
        {
          "action": "select",
          "selector": "#personalSalutation",
          "value_ref": "address:billing.salutation"
        },
        {
          "action": "fill",
          "selector": "#personalFirstName",
          "value_ref": "address:billing.first_name"
        },
        {
          "action": "fill",
          "selector": "#personalLastName",
          "value_ref": "address:billing.last_name"
        },
        {
          "action": "fill",
          "selector": "#personalMail",
          "value_ref": "login:invalid_email.email"
        },
        {
          "action": "fill",
          "selector": "#personalPassword",
          "value_ref": "login:invalid_email.password"
        },
        {
          "action": "fill",
          "selector": "#personalPasswordConfirmation",
          "value_ref": "login:invalid_email.password"
        },
        {
          "action": "fill",
          "selector": "#billingAddressAddressStreet",
          "value_ref": "address:billing.street"
        },
        {
          "action": "fill",
          "selector": "#billingAddressAddressZipcode",
          "value_ref": "address:billing.zip"
        },
        {
          "action": "fill",
          "selector": "#billingAddressAddressCity",
          "value_ref": "address:billing.city"
        },
        {
          "action": "select",
          "selector": "#billingAddressAddressCountry",
          "value_ref": "address:billing.country"
        }
      ]
    },
    {
      "step": 3,
      "action": "Formular absenden",
      "expected": "Formular wird abgeschickt",
      "inputs": [
        {
          "action": "check",
          "selector": "#acceptedDataProtection"
        },
        {
          "action": "click",
          "selector": "button:has-text('Registrieren')"
        }
      ]
    },
    {
      "step": 4,
      "action": "Validierungsfehler prüfen",
      "expected": "Validierungsfehlermeldung für ungültige E-Mail wird angezeigt"
    }
  ],
  "test_data": [
    {
      "type": "channel",
      "name": "AT"
    },
    {
      "type": "extra",
      "name": "default",
      "invalid_email": "ungueltige-email-ohne-at"
    },
    {
      "type": "login",
      "name": "invalid_email",
      "email": "ungueltige-email-ohne-at",
      "password": "TestPasswort123!"
    },
    {
      "type": "address",
      "name": "billing",
      "salutation": "mr",
      "first_name": "Test",
      "last_name": "Kunde",
      "street": "Teststrasse 1",
      "zip": "4020",
      "city": "Linz",
      "country": "AT"
    }
  ],
  "automation": {
    "status": "automated",
    "framework": "Playwright + pytest",
    "repo": "GE-ECommerce-Testing",
    "spec_file": "playwright_tests/tests/test_account.py",
    "function_name": "test_registration_invalid_email_shows_error",
    "tags": [
      "account",
      "feature"
    ]
  },
  "orchestration": {
    "parallel_safe": false,
    "timeout_seconds": 60,
    "retry_count": 1
  },
  "meta": {
    "author": "QA Team",
