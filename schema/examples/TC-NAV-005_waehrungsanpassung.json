{
  "test_id": "TC-NAV-005",
  "name": "Waehrungsanpassung bei Laenderwechsel",
  "category": [
    "e2e"
  ],
  "priority": "P1",
  "functional_area": "Navigation",
  "schema_version": "2.2.0",
  "scope": {
    "environments": [
      "staging",
      "production"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Testprodukt ist in AT/DE (EUR) und CH (CHF) verfuegbar"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Produktseite im AT-Shop aufrufen",
      "expected": "Produktseite laedt korrekt",
      "inputs": [
        {
          "action": "navigate",
          "value_ref": "product:duftkissen_lavendel.path"
        }
      ]
    },
    {
      "step": 2,
      "action": "Cookie-Banner akzeptieren",
      "expected": "Banner wird geschlossen",
      "inputs": [
        {
          "action": "click",
          "selector": "button#accept"
        }
      ]
    },
    {
      "step": 3,
      "action": "Waehrung auf Produktseite pruefen (AT/DE)",
      "expected": "Preis wird in EUR angezeigt (Euro-Zeichen oder EUR sichtbar)",
      "selector_hint": "meta[itemprop='priceCurrency'], .product-detail-price"
    },
    {
      "step": 4,
      "action": "Zum CH-Shop navigieren",
      "expected": "CH-Shop wird geladen",
      "inputs": [
        {
          "action": "click",
          "selector": ".language-selector, .country-selector"
        }
      ]
    },
    {
      "step": 5,
      "action": "Gleiches Produkt im CH-Shop aufrufen",
      "expected": "Produktseite im CH-Shop laedt korrekt",
      "inputs": [
        {
          "action": "navigate",
          "value_ref": "product:duftkissen_lavendel.path"
        }
      ]
    },
    {
      "step": 6,
      "action": "Waehrung auf Produktseite pruefen (CH)",
      "expected": "Preis wird in CHF angezeigt (CHF oder Franken sichtbar)",
      "selector_hint": "meta[itemprop='priceCurrency'], .product-detail-price"
    }
  ],
  "test_data": [
    {
      "type": "channel",
      "name": "AT"
    },
    {
      "type": "channel",
      "name": "DE"
    },
    {
      "type": "channel",
      "name": "CH"
    },
    {
      "type": "product",
      "name": "duftkissen_lavendel",
      "path": "p/duftkissen-lavendel/ge-p-49415",
      "product_name": "Duftkissen Lavendel",
      "article_number": "49415"
    }
  ],
  "automation": {
