{
  "test_id": "TC-SEARCH-004",
  "name": "Klick auf Suchergebnis navigiert zur Produktseite",
  "category": "feature",
  "priority": "P1",
  "schema_version": "2.0.0",
  "scope": {
    "channels": [
      "AT",
      "DE",
      "CH"
    ],
    "environments": [
      "staging",
      "production"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Suchfunktion ist aktiv"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Suchfeld öffnen und Artikelnummer eingeben",
      "expected": "Suchbegriff wird im Feld angezeigt",
      "selector_hint": "input#header-main-search-input",
      "inputs": [
        {
          "action": "click",
          "selector": "button.search-toggle-btn.js-search-toggle-btn"
        },
        {
          "action": "fill",
          "selector": "input#header-main-search-input",
          "value": "862990"
        }
      ]
    },
    {
      "step": 2,
      "action": "Suche absenden",
      "expected": "Suchergebnisseite wird geladen",
      "inputs": [
        {
          "action": "click",
          "selector": "input#header-main-search-input"
        }
      ]
    },
    {
      "step": 3,
      "action": "Erstes Ergebnis anklicken",
      "expected": "Produktdetailseite wird geladen",
      "selector_hint": ".product-box a",
      "inputs": [
        {
          "action": "click",
          "selector": ".product-box a"
        }
      ]
    },
    {
      "step": 4,
      "action": "Auf korrekter Produktseite prüfen",
      "expected": "URL enthält den erwarteten Produktpfad"
    }
  ],
  "test_data": [
    {
      "type": "extra",
      "name": "default",
      "articles": [
        {
          "article_number": "862990",
          "expected_url_path": "p/kurzarmshirt-aus-bio-baumwolle/ge-p-862990"
        },
        {
          "article_number": "863190",
          "expected_url_path": "p/blusenshirt-aus-bio-leinen/ge-p-863190"
        }
      ]
    }
  ],
