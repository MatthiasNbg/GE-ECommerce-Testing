    "function_name": "test_tc_promo_001",
    "tags": [
      "promotions",
      "exclusion",
      "nicht-rabattierbar"
    ]
  },
  "orchestration": {
    "parallel_safe": false,
    "timeout_seconds": 60,
    "retry_count": 1
  },
