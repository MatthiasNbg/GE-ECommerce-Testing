{
  "test_id": "TC-PROMO-BUNDLE-003",
  "name": "Kissen + Schonbezug gratis",
  "category": "regression",
  "priority": "P1",
  "functional_area": "Feature Promotion",
  "schema_version": "3.0.0",
  "scope": {
    "environments": [
      "staging"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Promotion: Kissen-Kauf ergibt Schonbezug gratis",
    "Kissen und Schonbezug als Bundle konfiguriert"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Kissen zum Warenkorb hinzufuegen",
      "expected": "Kissen im Warenkorb"
    },
    {
      "step": 2,
      "action": "Pruefen: Schonbezug automatisch als Gratisartikel",
      "expected": "Passender Schonbezug wird automatisch gratis hinzugefuegt"
    },
    {
      "step": 3,
      "action": "Pruefen: Schonbezug mit 0 EUR/CHF angezeigt",
      "expected": "Schonbezug mit Preis 0 im Warenkorb"
    },
    {
      "step": 4,
      "action": "Pruefen: Nur passender Schonbezug hinzugefuegt",
      "expected": "Korrekte Zuordnung Kissen -> Schonbezug"
    },
    {
      "step": 5,
      "action": "Anderes Kissen testen -> anderer Schonbezug",
      "expected": "Andere Kissen-Variante erhaelt passenden Schonbezug"
    },
    {
      "step": 6,
      "action": "Kissen entfernen -> Schonbezug wird ebenfalls entfernt",
      "expected": "Entfernung des Kissens entfernt auch den Schonbezug"
    }
  ],
  "test_data": [
    {
