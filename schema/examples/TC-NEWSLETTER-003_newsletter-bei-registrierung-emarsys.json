{
  "test_id": "TC-NEWSLETTER-003",
  "name": "Newsletter-Anmeldung bei Registrierung (Emarsys)",
  "category": [
    "e2e"
  ],
  "priority": "P2",
  "functional_area": "Feature Newsletter",
  "schema_version": "3.0.0",
  "scope": {
    "environments": [
      "staging",
      "production"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Newsletter-Checkbox ist im Registrierungsformular sichtbar",
    "Emarsys-Integration ist aktiv"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Registrierungsseite aufrufen",
      "expected": "Registrierungsformular wird angezeigt",
      "inputs": [
        {
          "action": "navigate",
          "value": "/account/login"
        }
      ]
    },
    {
      "step": 2,
      "action": "Registrierungsformular ausfuellen und Newsletter-Checkbox aktivieren",
      "expected": "Newsletter-Checkbox ist aktiviert",
      "inputs": [
        {
          "action": "check",
          "selector": "#acceptedNewsletter"
        }
      ]
    },
    {
      "step": 3,
      "action": "Registrierung absenden",
      "expected": "Account wird erfolgreich erstellt"
    },
    {
      "step": 4,
      "action": "MANUELL: E-Mail-Postfach pruefen",
      "expected": "Newsletter-Bestaetigungs-E-Mail von Emarsys ist eingegangen"
    }
  ],
  "postconditions": [
    "E-Mail von Emarsys wurde empfangen",
    "Newsletter-Anmeldung ist im Emarsys-System hinterlegt"
  ],
