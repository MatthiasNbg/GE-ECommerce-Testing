{
  "test_id": "TC-SEARCH-001",
  "name": "Autocomplete zeigt korrektes Produkt bei Artikelnummer-Eingabe",
  "category": [
    "e2e"
  ],
  "priority": "P1",
  "functional_area": "Feature Suche",
  "schema_version": "3.0.0",
  "scope": {
