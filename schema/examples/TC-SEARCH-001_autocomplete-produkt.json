      "staging",
      "production"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Suchfunktion ist aktiv"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Suchfeld öffnen",
      "expected": "Suchfeld wird sichtbar",
      "selector_hint": "button.search-toggle-btn",
      "inputs": [
        {
          "action": "click",
          "selector": "button.search-toggle-btn.js-search-toggle-btn"
        }
      ]
    },
    {
      "step": 2,
      "action": "Artikelnummer eingeben",
      "expected": "Artikelnummer wird im Suchfeld angezeigt",
      "selector_hint": "input#header-main-search-input",
      "inputs": [
        {
          "action": "fill",
          "selector": "input#header-main-search-input",
          "value_ref": "search:article_number.term"
        }
      ]
    },
    {
      "step": 3,
      "action": "Auf Autocomplete warten",
      "expected": "Autocomplete-Dropdown erscheint mit Vorschlägen",
      "inputs": [
        {
          "action": "wait",
          "selector": ".search-suggest-product-link"
        }
      ]
    },
    {
      "step": 4,
      "action": "Ersten Vorschlag prüfen",
      "expected": "Erster Vorschlag enthält das gesuchte Produkt",
      "selector_hint": ".search-suggest-product-link"
    }
  ],
