{
  "test_id": "TC-PDP-002",
  "name": "Varianten-Auswahl",
  "category": [
    "e2e"
  ],
  "priority": "P0",
  "functional_area": "PDP",
  "schema_version": "2.2.0",
  "scope": {
    "environments": [
      "staging",
      "production"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Testprodukt mit Varianten (Groesse/Farbe) ist verfuegbar"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Produktseite mit Varianten aufrufen",
      "expected": "Produktseite laedt korrekt",
      "inputs": [
        {
          "action": "navigate",
          "value_ref": "product:kurzarmshirt_bio.path"
        }
      ]
    },
    {
      "step": 2,
      "action": "Cookie-Banner akzeptieren",
      "expected": "Banner wird geschlossen",
      "inputs": [
        {
          "action": "click",
          "selector": "button#accept"
        }
      ]
    },
    {
      "step": 3,
      "action": "Varianten-Auswahl pruefen",
      "expected": "Varianten-Optionen (Groesse/Farbe) sind sichtbar",
      "selector_hint": ".product-detail-configurator-option, .product-detail-configurator select",
      "inputs": [
        {
          "action": "wait",
          "selector": ".product-detail-configurator-option, .product-detail-configurator select"
        }
      ],
      "assert": [
        {
          "type": "element_visible",
          "selector": ".product-detail-configurator-option, .product-detail-configurator select",
          "message": "Varianten-Auswahl muss sichtbar sein"
        }
      ]
    },
    {
      "step": 4,
      "action": "Andere Variante auswaehlen",
      "expected": "Variante wird geaendert, Preis kann sich aktualisieren",
      "inputs": [
        {
          "action": "click",
          "selector": ".product-detail-configurator-option"
        }
      ]
    },
    {
      "step": 5,
      "action": "Preis nach Variantenwechsel pruefen",
      "expected": "Preis ist sichtbar und groesser als 0",
      "selector_hint": ".product-detail-price, .product-detail-price-container"
    },
    {
      "step": 6,
      "action": "Variante in den Warenkorb legen",
      "expected": "Produkt wird erfolgreich zum Warenkorb hinzugefuegt",
      "inputs": [
        {
          "action": "click",
          "selector": "button.btn-buy, [data-add-to-cart]"
        }
      ]
    }
  ],
  "test_data": [
    {
      "type": "channel",
      "name": "AT"
    },
    {
      "type": "channel",
      "name": "DE"
    },
    {
      "type": "channel",
      "name": "CH"
    },
    {
      "type": "product",
      "name": "kurzarmshirt_bio",
      "path": "p/kurzarmshirt-aus-bio-baumwolle/ge-p-862990",
      "product_name": "Kurzarmshirt aus Bio-Baumwolle",
      "article_number": "862990"
    }
  ],
  "automation": {
    "status": "planned",
    "framework": "Playwright + pytest",
    "repo": "GE-ECommerce-Testing",
    "spec_file": "playwright_tests/tests/test_pdp.py",
    "function_name": "test_variant_selection",
    "tags": [
      "pdp",
      "feature"
    ]
  },
  "orchestration": {
    "parallel_safe": true,
    "timeout_seconds": 30,
    "retry_count": 1
  },
