{
  "test_id": "TC-DATA-011",
  "name": "Verfuegbarkeitsstatus korrekt angezeigt",
  "category": [
    "regression"
  ],
  "priority": "P1",
  "functional_area": "Datenvalidierung",
  "schema_version": "3.0.0",
  "scope": {
    "environments": [
      "staging"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Produkte mit verschiedenen Verfuegbarkeitsstatus vorhanden (verfuegbar, nicht verfuegbar, lieferbar in X Wochen)"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Produktseite mit verfuegbarem Produkt aufrufen",
      "expected": "Verfuegbarkeitsstatus wird korrekt als verfuegbar angezeigt"
    },
    {
      "step": 2,
      "action": "Produktseite mit nicht-verfuegbarem Produkt aufrufen",
      "expected": "Nicht-verfuegbar-Status wird korrekt angezeigt"
    },
    {
      "step": 3,
      "action": "Pruefen: Verfuegbarkeit in Listing-Seite korrekt",
      "expected": "Konsistente Anzeige in PDP und Listing"
    },
    {
      "step": 4,
      "action": "Test in allen Verkaufskanaelen (AT, DE, CH)",
      "expected": "Verfuegbarkeitsstatus konsistent in allen Kanaelen"
    }
  ],
  "test_data": [
    {
      "type": "channel",
      "name": "AT"
    },
    {
      "type": "channel",
      "name": "DE"
    },
    {
      "type": "channel",
      "name": "CH"
    }
  ],
