    },
    {
      "step": 2,
      "action": "Gleiches Produkt in DE-Kanal pruefen",
      "expected": "Name und Beschreibung konsistent (ggf. uebersetzt)"
    },
    {
      "step": 3,
      "action": "Gleiches Produkt in CH-Kanal pruefen",
      "expected": "Name und Beschreibung konsistent"
    },
    {
      "step": 4,
      "action": "Preise vergleichen (EUR vs CHF)",
      "expected": "Preise sind je Waehrung plausibel"
    },
    {
      "step": 5,
      "action": "Bilder und Produktmedien vergleichen",
      "expected": "Gleiche Bilder in allen Kanaelen"
    }
  ],
  "test_data": [
