      "name": "product_1",
      "path": "p/kurzarmshirt-aus-bio-baumwolle/ge-p-862990",
      "product_name": "Kurzarmshirt aus Bio-Baumwolle",
      "article_number": "862990"
    },
    {
      "type": "product",
      "name": "product_2",
      "path": "p/duftkissen-lavendel/ge-p-49415",
      "product_name": "Duftkissen Lavendel",
      "article_number": "49415"
    },
    {
      "type": "product",
      "name": "product_3",
      "path": "p/bademantel-raute-fuer-damen-und-herren/ge-p-410933",
      "product_name": "Bademantel Raute",
      "article_number": "410933"
    }
  ],
  "automation": {
