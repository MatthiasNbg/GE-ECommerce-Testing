{
  "test_id": "TC-WISH-002",
  "name": "Mehrere Produkte zur Merkliste hinzufuegen",
  "category": [
    "regression"
  ],
  "priority": "P1",
  "functional_area": "Merkliste/Wishlist",
  "schema_version": "3.0.0",
  "scope": {
    "environments": [
      "staging"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "AT-Testkunde ist vorhanden und kann sich einloggen",
    "3 Testprodukte sind verfuegbar und auf Lager",
    "Merkliste ist leer"
  ],
  "postconditions": [
    "Alle 3 Produkte sind auf der Merkliste sichtbar"
  ],
  "cleanup": [
    "Merkliste leeren"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Login-Seite aufrufen und einloggen",
      "expected": "Login erfolgreich",
      "inputs": [
        {
          "action": "navigate",
          "value": "/account/login"
        },
        {
          "action": "fill",
          "selector": "#loginMail",
          "value_ref": "login:at_customer.email"
        },
        {
          "action": "fill",
          "selector": "#loginPassword",
          "value_ref": "login:at_customer.password"
        },
        {
          "action": "click",
          "selector": "button:has-text('Anmelden')"
        }
      ]
    },
    {
      "step": 2,
      "action": "Erstes Produkt zur Merkliste hinzufuegen",
      "expected": "Herz-Button wird aktiv",
      "inputs": [
        {
          "action": "navigate",
          "value_ref": "product:product_1.path"
        },
        {
          "action": "click",
          "selector": "[data-add-to-wishlist]"
        }
      ]
    },
    {
      "step": 3,
      "action": "Zweites Produkt zur Merkliste hinzufuegen",
      "expected": "Herz-Button wird aktiv",
      "inputs": [
        {
          "action": "navigate",
          "value_ref": "product:product_2.path"
        },
        {
          "action": "click",
          "selector": "[data-add-to-wishlist]"
        }
      ]
    },
    {
      "step": 4,
      "action": "Drittes Produkt zur Merkliste hinzufuegen",
      "expected": "Herz-Button wird aktiv",
      "inputs": [
        {
          "action": "navigate",
          "value_ref": "product:product_3.path"
        },
        {
          "action": "click",
          "selector": "[data-add-to-wishlist]"
        }
      ]
    },
    {
      "step": 5,
      "action": "Merklisten-Seite aufrufen",
      "expected": "Alle 3 Produkte sind auf der Merkliste sichtbar",
      "inputs": [
        {
          "action": "navigate",
          "value": "/wishlist"
        }
      ]
    }
  ],
  "test_data": [
    {
      "type": "channel",
      "name": "AT"
    },
    {
      "type": "login",
      "name": "at_customer",
      "email": "ge-at-1@matthias-sax.de",
      "password": "scharnsteinAT"
    },
    {
