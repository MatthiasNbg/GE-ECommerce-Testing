{
  "test_id": "TC-CONTENT-006",
  "name": "Matratzen-Berater erreichbar",
  "category": [
    "regression"
  ],
  "priority": "P2",
  "functional_area": "Feature Content",
  "schema_version": "2.2.0",
  "scope": {
    "environments": [
      "staging",
      "production"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Matratzen-Berater ist im Shop verfuegbar"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Schlafen-Kategorie aufrufen oder nach Matratzen-Berater suchen",
      "expected": "Kategorie- oder Suchergebnisseite laedt korrekt",
      "inputs": [
        {
          "action": "navigate",
          "value": "/schlafen/"
        }
      ]
    },
    {
      "step": 2,
      "action": "Cookie-Banner akzeptieren falls vorhanden",
      "expected": "Banner wird geschlossen",
      "inputs": [
        {
          "action": "click",
          "selector": "button#accept"
        }
      ]
    },
    {
      "step": 3,
      "action": "Link zum Matratzen-Berater finden",
      "expected": "Link oder Teaser zum Matratzen-Berater ist sichtbar",
      "selector_hint": "a[href*='matratzen-berater'], a:has-text('Matratzen-Berater'), a[href*='berater']"
    },
    {
      "step": 4,
      "action": "Matratzen-Berater Link klicken",
      "expected": "Berater-Seite oder -Tool laedt korrekt",
      "inputs": [
        {
          "action": "click",
          "selector": "a[href*='matratzen-berater'], a:has-text('Matratzen-Berater'), a[href*='berater']"
        }
      ],
      "assert": [
        {
          "type": "url_contains",
          "expected": "berater",
          "message": "URL muss berater enthalten nach Navigation"
        }
      ]
    },
    {
      "step": 5,
      "action": "Interaktive Elemente des Beraters pruefen",
      "expected": "Interaktive Elemente (Buttons, Auswahlfelder, Formulare) sind vorhanden",
      "selector_hint": "button, select, input, .advisor-step, .berater-step"
    }
  ],
  "automation": {
    "status": "planned",
    "framework": "Playwright + pytest",
    "repo": "GE-ECommerce-Testing",
    "spec_file": "playwright_tests/tests/test_content_extended.py",
    "function_name": "test_mattress_advisor_accessible",
    "tags": [
      "content",
      "feature"
    ]
  },
  "orchestration": {
    "parallel_safe": true,
    "timeout_seconds": 30,
    "retry_count": 1
  },
  "meta": {
    "author": "QA Team",
    "created": "2026-02-06",
    "last_modified": "2026-02-06",
    "version": "1.0"
  }
}
