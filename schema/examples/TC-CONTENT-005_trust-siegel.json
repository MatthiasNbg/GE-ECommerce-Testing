{
  "test_id": "TC-CONTENT-005",
  "name": "Trust-Siegel angezeigt",
  "category": [
    "regression"
  ],
  "priority": "P2",
  "functional_area": "Feature Content",
  "schema_version": "2.2.0",
  "scope": {
    "environments": [
      "staging",
      "production"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Startseite aufrufen",
      "expected": "Startseite laedt korrekt",
      "inputs": [
        {
          "action": "navigate",
          "value": "/"
        }
      ]
    },
    {
      "step": 2,
      "action": "Cookie-Banner akzeptieren falls vorhanden",
      "expected": "Banner wird geschlossen",
      "inputs": [
        {
          "action": "click",
          "selector": "button#accept"
        }
      ]
    },
    {
      "step": 3,
      "action": "Zum Footer scrollen",
      "expected": "Footer-Bereich ist sichtbar",
      "selector_hint": "footer, .footer-main, .footer"
    },
    {
      "step": 4,
      "action": "Trust-Siegel/Zertifizierungen Bereich pruefen",
      "expected": "Trust-Siegel oder Zertifizierungsbereich ist sichtbar",
      "selector_hint": ".footer-trust, .trust-badges, .footer-logos",
      "assert": [
        {
          "type": "element_visible",
          "selector": ".footer-trust, .trust-badges, .footer-logos",
          "message": "Trust-Siegel-Bereich muss im Footer sichtbar sein"
        }
      ]
    },
    {
      "step": 5,
      "action": "Mindestens ein Trust-Badge/Siegel-Bild pruefen",
      "expected": "Mindestens ein Trust-Badge oder Siegel-Bild wird angezeigt",
      "selector_hint": ".footer-trust img, .trust-badges img, .footer-logos img",
      "assert": [
        {
          "type": "element_visible",
          "selector": ".footer-trust img, .trust-badges img, .footer-logos img",
          "message": "Mindestens ein Trust-Siegel-Bild muss angezeigt werden"
        }
      ]
    }
  ],
  "automation": {
    "status": "planned",
    "framework": "Playwright + pytest",
    "repo": "GE-ECommerce-Testing",
    "spec_file": "playwright_tests/tests/test_content_extended.py",
    "function_name": "test_trust_seals_displayed",
    "tags": [
      "content",
      "feature"
    ]
  },
  "orchestration": {
    "parallel_safe": true,
    "timeout_seconds": 30,
    "retry_count": 1
  },
  "meta": {
    "author": "QA Team",
    "created": "2026-02-06",
    "last_modified": "2026-02-06",
    "version": "1.0"
  }
}
