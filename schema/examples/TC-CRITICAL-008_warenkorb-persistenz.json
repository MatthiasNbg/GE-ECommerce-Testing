{
  "test_id": "TC-CRITICAL-008",
  "name": "Warenkorb-Persistenz nach Navigation",
  "category": [
    "e2e"
  ],
  "priority": "P0",
  "functional_area": "Feature Critical Path",
  "schema_version": "3.0.0",
  "scope": {
    "environments": [
      "staging"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Testprodukt ist verfügbar"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Produkt zum Warenkorb hinzufügen",
      "expected": "Produkt ist im Warenkorb sichtbar",
      "inputs": [
        {
          "action": "navigate",
          "value_ref": "product:shirt_bio.path"
        },
        {
          "action": "click",
          "selector": "button.btn-buy"
        }
      ]
    },
    {
      "step": 2,
      "action": "Warenkorb-Anzahl prüfen",
      "expected": "Warenkorb zeigt korrekte Artikelanzahl"
    },
    {
      "step": 3,
      "action": "Zur Startseite navigieren",
      "expected": "Startseite wird angezeigt",
      "inputs": [
        {
          "action": "navigate",
          "value": "/"
        }
      ]
    },
    {
      "step": 4,
      "action": "Kategorie besuchen (/wohnen/)",
      "expected": "Kategorieseite wird angezeigt",
      "inputs": [
        {
          "action": "navigate",
          "value": "/wohnen/"
        }
      ]
    },
    {
      "step": 5,
      "action": "Zurück zum Warenkorb navigieren",
      "expected": "Warenkorb-Seite wird angezeigt",
      "inputs": [
        {
          "action": "navigate",
          "value": "/checkout/cart"
        }
      ]
    },
    {
      "step": 6,
      "action": "Gleiche Artikelanzahl prüfen",
      "expected": "Warenkorb enthält dieselbe Anzahl wie zuvor"
    }
  ],
  "postconditions": [
    "Warenkorb-Inhalt bleibt nach Navigation erhalten"
  ],
  "automation": {
    "status": "planned",
    "framework": "Playwright + pytest",
