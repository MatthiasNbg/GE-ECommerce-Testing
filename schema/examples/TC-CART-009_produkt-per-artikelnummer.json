{
  "test_id": "TC-CART-009",
  "name": "Produkt per Artikelnummer im Warenkorb hinzufügen",
  "category": [
    "regression"
  ],
  "priority": "P1",
  "functional_area": "Feature Warenkorb",
  "schema_version": "3.0.0",
  "scope": {
    "environments": [
      "staging",
      "production"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Testprodukt mit Artikelnummer 862990 ist verfügbar und auf Lager"
  ],
  "postconditions": [
    "Produkt wurde per Artikelnummer zum Warenkorb hinzugefügt und ist sichtbar"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Warenkorb-Seite aufrufen",
      "expected": "Warenkorb-Seite wird angezeigt mit Eingabefeld für Artikelnummer",
      "inputs": [
        {
          "action": "navigate",
          "value": "/checkout/cart"
        }
      ]
    },
    {
      "step": 2,
      "action": "Artikelnummer in das Eingabefeld eingeben",
      "expected": "Artikelnummer wird im Eingabefeld angezeigt",
      "selector_hint": "#addProductInput",
      "inputs": [
        {
          "action": "fill",
          "selector": "#addProductInput",
          "value_ref": "product:default.article_number"
        }
      ]
    },
    {
      "step": 3,
      "action": "Submit-Button klicken",
      "expected": "Produkt wird zum Warenkorb hinzugefügt, Seite aktualisiert sich",
      "selector_hint": "#addProductButton",
      "inputs": [
        {
          "action": "click",
          "selector": "#addProductButton"
        }
      ]
    },
    {
      "step": 4,
      "action": "Prüfen ob Produkt im Warenkorb angezeigt wird",
      "expected": "Mindestens 1 Produkt im Warenkorb, Produktname ist sichtbar und nicht leer"
    }
  ],
  "test_data": [
    {
      "type": "channel",
      "name": "AT"
