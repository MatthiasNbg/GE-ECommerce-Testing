{
  "test_id": "TC-SEARCH-006",
  "name": "Wildrose-Suche schliesst Bürsten-Produkte aus",
  "category": "feature",
  "priority": "P1",
  "schema_version": "2.0.0",
  "scope": {
    "channels": [
      "AT",
      "DE",
      "CH"
    ],
    "environments": [
      "staging",
      "production"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Suchfunktion ist aktiv"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Suchfeld öffnen und \"wildrose\" eingeben",
      "expected": "Suchbegriff wird im Feld angezeigt",
      "selector_hint": "input#header-main-search-input",
      "inputs": [
        {
          "action": "click",
          "selector": "button.search-toggle-btn.js-search-toggle-btn"
        },
        {
          "action": "fill",
          "selector": "input#header-main-search-input",
          "value": "wildrose"
        }
      ]
    },
    {
      "step": 2,
      "action": "Suche absenden",
      "expected": "Suchergebnisseite wird geladen",
      "inputs": [
        {
          "action": "click",
          "selector": "input#header-main-search-input"
        }
      ]
    },
    {
      "step": 3,
      "action": "Produktnamen sammeln",
      "expected": "Alle Produktnamen auf der Ergebnisseite werden erfasst"
    },
    {
      "step": 4,
      "action": "Prüfen dass keine Bürsten enthalten sind",
      "expected": "Kein Produktname enthält Begriffe wie bürste, buerste, brush oder pinsel"
    }
  ],
  "test_data": [
    {
      "type": "extra",
      "name": "default",
      "search_term": "wildrose",
      "excluded_terms": [
        "bürste",
        "buerste",
        "brush",
        "pinsel"
      ]
    }
  ],
  "automation": {
    "status": "automated",
    "framework": "Playwright + pytest",
    "repo": "GE-ECommerce-Testing",
    "spec_file": "playwright_tests/tests/test_search.py",
    "function_name": "test_search_wildrose_excludes_brushes",
    "tags": [
      "smoke",
      "search"
    ]
  },
  "orchestration": {
    "parallel_safe": true,
    "timeout_seconds": 30,
    "retry_count": 1
  },
  "meta": {
    "author": "QA Team",
    "created": "2026-02-03",
