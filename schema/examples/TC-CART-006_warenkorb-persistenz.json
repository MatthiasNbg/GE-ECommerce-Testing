{
  "test_id": "TC-CART-006",
  "name": "Warenkorb-Inhalt bleibt bei Seitenwechsel erhalten",
  "category": [
    "regression"
  ],
  "priority": "P0",
  "functional_area": "Feature Warenkorb",
  "schema_version": "3.0.0",
  "scope": {
    "environments": [
      "staging",
      "production"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Testprodukt ist verfügbar und auf Lager"
  ],
  "postconditions": [
    "Warenkorb-Inhalt bleibt bei Seitenwechsel erhalten"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Produktseite aufrufen und Produkt zum Warenkorb hinzufügen",
      "expected": "Produkt wird zum Warenkorb hinzugefügt",
      "selector_hint": ".btn-buy, [data-add-to-cart]",
      "inputs": [
        {
          "action": "navigate",
          "value_ref": "product:default.path"
        },
        {
          "action": "click",
          "selector": "button.btn-buy"
        }
      ]
    },
    {
      "step": 2,
      "action": "Zur Startseite navigieren",
      "expected": "Startseite wird geladen",
      "inputs": [
        {
          "action": "navigate",
          "value": "/"
        }
      ]
    },
    {
      "step": 3,
      "action": "Anderes Produkt besuchen",
      "expected": "Zweite Produktseite wird geladen",
      "inputs": [
        {
          "action": "navigate",
          "value_ref": "product:cushion_lavender.path"
        }
      ]
    },
    {
      "step": 4,
      "action": "Zurück zum Warenkorb navigieren",
      "expected": "Warenkorb-Seite wird angezeigt",
      "inputs": [
        {
          "action": "navigate",
          "value": "/checkout/cart"
        }
      ]
    },
    {
      "step": 5,
      "action": "Prüfen ob ursprüngliches Produkt noch vorhanden ist",
      "expected": "Produkt ist weiterhin im Warenkorb sichtbar",
      "selector_hint": ".line-item-label"
    }
  ],
  "test_data": [
    {
      "type": "channel",
      "name": "AT"
    },
    {
      "type": "channel",
      "name": "DE"
    },
    {
      "type": "channel",
      "name": "CH"
    },
    {
      "type": "product",
      "name": "default",
