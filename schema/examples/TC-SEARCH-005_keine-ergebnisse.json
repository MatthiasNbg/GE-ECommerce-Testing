{
  "test_id": "TC-SEARCH-005",
  "name": "Keine Ergebnisse bei ungültiger Artikelnummer",
  "category": [
    "e2e"
  ],
  "priority": "P1",
  "functional_area": "Feature Suche",
  "schema_version": "3.0.0",
  "scope": {
    "environments": [
      "staging",
      "production"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Suchfunktion ist aktiv"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Suchfeld öffnen",
      "expected": "Suchfeld wird sichtbar",
      "selector_hint": "button.search-toggle-btn",
      "inputs": [
        {
          "action": "click",
          "selector": "button.search-toggle-btn.js-search-toggle-btn"
        }
      ]
    },
    {
      "step": 2,
      "action": "Ungültige Artikelnummer eingeben",
      "expected": "Artikelnummer wird im Suchfeld angezeigt",
      "selector_hint": "input#header-main-search-input",
      "inputs": [
        {
          "action": "fill",
          "selector": "input#header-main-search-input",
          "value_ref": "search:no_results.term"
        }
      ]
    },
    {
      "step": 3,
      "action": "Suche absenden",
      "expected": "Suchergebnisseite wird geladen",
      "inputs": [
        {
          "action": "click",
          "selector": "input#header-main-search-input"
        }
      ]
    },
    {
      "step": 4,
      "action": "Keine-Ergebnisse-Meldung prüfen",
      "expected": "Seite zeigt eine Meldung an, dass keine Ergebnisse gefunden wurden"
    }
  ],
  "test_data": [
    {
      "type": "channel",
      "name": "AT"
    },
    {
      "type": "channel",
      "name": "DE"
    },
    {
      "type": "channel",
      "name": "CH"
    },
    {
      "type": "extra",
      "name": "default",
      "invalid_article": "99999999"
    },
    {
      "type": "search",
      "name": "no_results",
      "term": "xyznonexistent123"
    }
  ],
  "automation": {
