{
  "test_id": "TC-PROMO-MOV-002",
  "name": "MBW nur auf Warenkorb angewendet",
  "category": "regression",
  "priority": "P1",
  "functional_area": "Feature Promotion",
  "schema_version": "3.0.0",
  "scope": {
    "environments": [
      "staging"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Promotion mit MBW-Bedingung aktiv",
    "Warenkorb mit Produkten + Versandkosten"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Produkte knapp unter MBW in den Warenkorb legen",
      "expected": "Warenwert knapp unter MBW"
    },
    {
      "step": 2,
      "action": "Pruefen: Versandkosten NICHT zum MBW gezaehlt",
      "expected": "MBW basiert nur auf Produktpreisen"
    },
    {
      "step": 3,
      "action": "Pruefen: Einloesegutscheine NICHT den Warenwert fuer MBW reduzieren",
      "expected": "Gutschein-Guthaben fliesst nicht in MBW ein"
    },
    {
      "step": 4,
      "action": "Produkt hinzufuegen bis MBW erreicht",
      "expected": "MBW-Schwelle ueberschritten"
    },
    {
      "step": 5,
      "action": "Promotion-Code eingeben",
      "expected": "Promotion wird akzeptiert"
    },
    {
      "step": 6,
      "action": "Korrekte Berechnung bei gemischtem Warenkorb pruefen",
      "expected": "MBW ausschliesslich aus Produktpreisen berechnet"
    }
  ],
