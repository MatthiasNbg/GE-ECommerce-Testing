{
  "test_id": "TC-PROMO-CHK-001",
  "name": "Gutschein zu regulaerem Warenkorb blockiert",
  "category": [
    "regression"
  ],
  "priority": "P0",
  "functional_area": "Feature Promotion",
  "schema_version": "3.0.0",
  "scope": {
    "environments": [
      "staging"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Regulaeres Produkt im Warenkorb",
    "Einkaufsgutschein (Artikel 736675, HC Code 6609) verfuegbar"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Regulaeres Produkt zum Warenkorb hinzufuegen (z.B. Bett Somnia)",
      "expected": "Produkt im Warenkorb"
    },
    {
      "step": 2,
      "action": "Versuchen Gutschein (736675) hinzuzufuegen",
      "expected": "BeforeLineItemAddedEvent wird gefeuert"
    },
    {
      "step": 3,
      "action": "Pruefen: Gutschein wird NICHT hinzugefuegt",
      "expected": "Fehlermeldung: Einkaufsgutscheine koennen nur separat gekauft werden"
    },
    {
      "step": 4,
      "action": "Pruefen: User bleibt auf PDP oder wird zu Cart geleitet",
      "expected": "Warenkorb enthaelt nur regulaeres Produkt"
    }
  ],
