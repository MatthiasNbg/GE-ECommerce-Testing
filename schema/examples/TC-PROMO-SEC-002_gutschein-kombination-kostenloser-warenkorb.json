{
  "test_id": "TC-PROMO-SEC-002",
  "name": "Gutschein-Kombination fuer kostenlosen Warenkorb",
  "category": [
    "regression"
  ],
  "priority": "P0",
  "functional_area": "Security",
  "schema_version": "3.0.0",
  "scope": {
    "environments": [
      "staging"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Einloesegutschein mit Guthaben vorhanden",
    "Aktive Warenkorb-Promotion vorhanden"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Guenstiges Produkt zum Warenkorb hinzufuegen",
      "expected": "Produkt im Warenkorb"
    },
    {
      "step": 2,
      "action": "Einloesegutschein eingeben (Guthaben > Warenwert)",
      "expected": "Gutschein wird eingeloest"
    },
    {
      "step": 3,
      "action": "Zusaetzlich Promotion-Code eingeben",
      "expected": "Promotion wird verarbeitet"
    },
    {
      "step": 4,
      "action": "Pruefen: Endsumme nicht negativ",
      "expected": "Warenkorb kann maximal auf 0 EUR reduziert werden"
    },
    {
      "step": 5,
      "action": "Pruefen: Kein Guthaben ueber Warenwert hinaus erstattet",
      "expected": "Ueberschuessiges Guthaben bleibt auf Gutschein"
    }
  ],
