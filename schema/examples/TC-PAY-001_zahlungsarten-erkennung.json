{
  "test_id": "TC-PAY-001",
  "name": "Zahlungsarten automatisch erkennen (Discovery)",
  "category": "e2e",
  "priority": "P1",
  "schema_version": "2.1.0",
  "scope": {
    "channels": [
      "AT",
      "DE",
      "CH"
    ],
    "environments": [
      "staging"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Testprodukt ist verfuegbar"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Fuer jedes Land: Produkt in den Warenkorb hinzufuegen",
      "expected": "Schritt erfolgreich ausgefuehrt",
      "inputs": [
        {
          "action": "navigate",
          "value": "/p/kurzarmshirt-aus-bio-baumwolle/ge-p-862990"
        },
        {
          "action": "click",
          "selector": "button.btn-buy"
        }
      ]
    },
    {
      "step": 2,
      "action": "Gast-Checkout starten",
      "expected": "Schritt erfolgreich ausgefuehrt",
      "inputs": [
        {
          "action": "click",
          "selector": "button:has-text('Als Gast bestellen')"
        }
      ]
    },
    {
      "step": 3,
      "action": "Adresse eingeben",
      "expected": "Schritt erfolgreich ausgefuehrt",
      "inputs": [
        {
          "action": "select",
          "selector": "#personalSalutation",
          "value": "mr"
        },
        {
          "action": "fill",
          "selector": "#billingAddress-personalFirstName",
          "value": "Test"
        },
        {
          "action": "fill",
          "selector": "#billingAddress-personalLastName",
          "value": "Kunde"
        },
        {
          "action": "fill",
          "selector": "#personalMail",
          "value": "test@example.com"
        },
        {
          "action": "fill",
          "selector": "#billingAddress-AddressStreet",
          "value": "Teststrasse 123"
        },
        {
          "action": "fill",
          "selector": "#billingAddressAddressZipcode",
          "value": "4020"
        },
        {
          "action": "fill",
          "selector": "#billingAddressAddressCity",
          "value": "Linz"
        },
        {
          "action": "select",
          "selector": "#billingAddressAddressCountry",
          "value": "AT"
        }
      ]
    },
    {
      "step": 4,
      "action": "Zahlungsseite aufrufen",
      "expected": "Schritt erfolgreich ausgefuehrt",
      "inputs": [
        {
          "action": "check",
          "selector": "#acceptedDataProtection"
        },
        {
          "action": "click",
          "selector": "button:has-text('Weiter')"
        }
      ]
    },
    {
      "step": 5,
      "action": "Zahlungsarten erkennen (.payment-method-label strong)",
      "expected": "Schritt erfolgreich ausgefuehrt"
    },
    {
      "step": 6,
      "action": "Konfiguration aktualisieren",
      "expected": "Schritt erfolgreich ausgefuehrt"
    }
  ],
  "automation": {
    "status": "automated",
    "framework": "Playwright + pytest",
    "repo": "GE-ECommerce-Testing",
    "spec_file": "playwright_tests/tests/test_payment_discovery.py",
    "function_name": "test_discover_payment_methods",
    "tags": [
      "discovery",
      "payment"
    ]
  },
  "orchestration": {
    "parallel_safe": false,
    "timeout_seconds": 180,
    "retry_count": 1
  },
  "meta": {
    "author": "QA Team",
    "created": "2026-02-03",
    "last_modified": "2026-02-03",
    "version": "1.0"
  }
}
