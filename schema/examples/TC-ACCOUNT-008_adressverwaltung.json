{
  "test_id": "TC-ACCOUNT-008",
  "name": "Adressverwaltung - Neue Adresse hinzufügen",
  "category": [
    "e2e"
  ],
  "priority": "P1",
  "functional_area": "Feature Account",
  "schema_version": "3.0.0",
  "scope": {
    "environments": [
      "staging"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Registrierungsseite ist erreichbar",
    "Bestehender Kundenaccount",
    "Benutzer ist eingeloggt"
  ],
  "postconditions": [
    "Neue Adresse ist in der Adressliste sichtbar"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Adressverwaltung aufrufen",
      "expected": "Adressverwaltungsseite wird angezeigt",
      "inputs": [
        {
          "action": "navigate",
          "value": "/account/address"
        }
      ]
    },
    {
      "step": 2,
      "action": "Neue Adresse hinzufügen (5020 Salzburg)",
      "expected": "Adressformular wird geöffnet und Daten eingetragen",
      "inputs": [
        {
          "action": "click",
          "selector": "a:has-text('Neue Adresse hinzufügen')"
        },
        {
          "action": "select",
          "selector": "#addresspersonalSalutation",
          "value_ref": "address:new.salutation"
        },
        {
          "action": "fill",
          "selector": "#addresspersonalFirstName",
          "value_ref": "address:new.first_name"
        },
        {
          "action": "fill",
          "selector": "#addresspersonalLastName",
          "value_ref": "address:new.last_name"
        },
        {
          "action": "fill",
          "selector": "#addressAddressStreet",
          "value_ref": "address:new.street"
        },
        {
          "action": "fill",
          "selector": "#addressAddressZipcode",
          "value_ref": "address:new.zip"
        },
        {
          "action": "fill",
          "selector": "#addressAddressCity",
          "value_ref": "address:new.city"
        },
        {
          "action": "select",
          "selector": "#addressAddressCountry",
          "value_ref": "address:new.country"
        }
      ]
    },
    {
      "step": 3,
      "action": "Speichern",
      "expected": "Neue Adresse wird gespeichert",
      "inputs": [
        {
          "action": "click",
          "selector": "button:has-text('Adresse speichern')"
        }
      ]
    },
    {
      "step": 4,
      "action": "Adresse in Liste prüfen",
      "expected": "Neue Adresse erscheint in der Adressliste"
    }
  ],
  "test_data": [
    {
      "type": "channel",
      "name": "AT"
    },
    {
      "type": "address",
      "name": "new",
      "zip": "5020",
      "city": "Salzburg",
      "country": "AT",
      "salutation": "mr",
      "first_name": "Test",
      "last_name": "Kunde",
      "street": "Salzburger Strasse 1"
    }
  ],
  "automation": {
    "status": "automated",
    "framework": "Playwright + pytest",
    "repo": "GE-ECommerce-Testing",
    "spec_file": "playwright_tests/tests/test_account.py",
    "function_name": "test_address_management",
    "tags": [
      "account",
      "feature"
    ]
  },
  "orchestration": {
    "parallel_safe": false,
    "timeout_seconds": 60,
    "retry_count": 1
  },
  "meta": {
    "author": "QA Team",
    "created": "2026-02-03",
    "last_modified": "2026-02-03",
    "version": "1.0"
  }
}
