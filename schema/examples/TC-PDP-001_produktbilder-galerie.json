{
  "test_id": "TC-PDP-001",
  "name": "Produktbilder-Galerie und Zoom",
  "category": "e2e",
  "priority": "P1",
  "functional_area": "PDP",
  "schema_version": "2.2.0",
  "scope": {
    "environments": [
      "staging",
      "production"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Testprodukt mit mehreren Bildern ist verfuegbar"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Produktseite aufrufen",
      "expected": "Produktseite laedt korrekt",
      "inputs": [
        {
          "action": "navigate",
          "value": "/p/duftkissen-lavendel/ge-p-49415"
        }
      ]
    },
    {
      "step": 2,
      "action": "Cookie-Banner akzeptieren",
      "expected": "Banner wird geschlossen",
      "inputs": [
        {
          "action": "click",
          "selector": "button#accept"
        }
      ]
    },
    {
      "step": 3,
      "action": "Hauptbild auf Sichtbarkeit pruefen",
      "expected": "Hauptbild ist sichtbar und geladen",
      "selector_hint": ".gallery-slider-image, .product-detail-media img, .gallery-slider-single-image",
      "inputs": [
        {
          "action": "wait",
          "selector": ".gallery-slider-image, .product-detail-media img, .gallery-slider-single-image"
        }
      ],
      "assert": [
        {
          "type": "element_visible",
          "selector": ".gallery-slider-image, .product-detail-media img",
          "message": "Hauptbild muss sichtbar sein"
        }
      ]
    },
    {
      "step": 4,
      "action": "Thumbnails pruefen",
      "expected": "Thumbnail-Bilder sind sichtbar",
      "selector_hint": ".gallery-slider-thumbnails-item, .gallery-slider-thumbnails img"
    },
    {
      "step": 5,
      "action": "Thumbnail anklicken",
      "expected": "Hauptbild wechselt zum angeklickten Thumbnail",
      "inputs": [
        {
          "action": "click",
          "selector": ".gallery-slider-thumbnails-item, .gallery-slider-thumbnails img"
        }
      ]
    },
    {
      "step": 6,
      "action": "Zoom/Vergroesserung testen",
      "expected": "Bild wird vergroessert dargestellt oder Zoom-Overlay oeffnet sich",
      "inputs": [
        {
          "action": "click",
          "selector": ".gallery-slider-image, .product-detail-media img"
        }
      ]
    }
  ],
  "test_data": [
    {
      "type": "channel",
      "name": "AT"
    },
    {
      "type": "channel",
      "name": "DE"
    },
    {
      "type": "channel",
      "name": "CH"
    },
    {
      "type": "product",
      "name": "duftkissen_lavendel",
      "path": "p/duftkissen-lavendel/ge-p-49415",
      "product_name": "Duftkissen Lavendel"
    }
  ],
  "automation": {
    "status": "planned",
    "framework": "Playwright + pytest",
    "repo": "GE-ECommerce-Testing",
    "spec_file": "playwright_tests/tests/test_pdp.py",
    "function_name": "test_product_image_gallery",
    "tags": [
      "pdp",
      "feature"
    ]
  },
  "orchestration": {
    "parallel_safe": true,
    "timeout_seconds": 30,
    "retry_count": 1
  },
