{
  "test_id": "TC-ACCOUNT-006",
  "name": "Login mit falschen Zugangsdaten schlägt fehl",
  "category": [
    "e2e"
  ],
  "priority": "P1",
  "functional_area": "Feature Account",
  "schema_version": "3.0.0",
  "scope": {
    "environments": [
      "staging"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Registrierungsseite ist erreichbar"
  ],
  "postconditions": [
    "Benutzer bleibt auf der Login-Seite",
    "Fehlermeldung wird angezeigt"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Login-Seite aufrufen",
      "expected": "Login-Formular wird angezeigt",
      "inputs": [
        {
          "action": "navigate",
          "value": "/account/login"
        }
      ]
    },
    {
      "step": 2,
      "action": "Falsche E-Mail eingeben",
      "expected": "Falsche E-Mail-Adresse ist im Formular eingetragen",
      "inputs": [
        {
          "action": "fill",
          "selector": "#loginMail",
          "value_ref": "login:invalid_user.email"
        }
      ]
    },
    {
      "step": 3,
      "action": "Falsches Passwort eingeben",
      "expected": "Falsches Passwort ist im Formular eingetragen",
      "inputs": [
        {
          "action": "fill",
          "selector": "#loginPassword",
          "value_ref": "login:invalid_user.password"
        }
      ]
    },
    {
      "step": 4,
      "action": "Login absenden",
      "expected": "Login-Formular wird abgeschickt",
      "inputs": [
        {
          "action": "click",
          "selector": "button:has-text('Anmelden')"
        }
      ]
    },
    {
      "step": 5,
      "action": "Fehlermeldung prüfen",
      "expected": "Fehlermeldung wird angezeigt, dass die Zugangsdaten falsch sind"
    }
  ],
  "test_data": [
    {
      "type": "channel",
      "name": "AT"
    },
    {
      "type": "channel",
      "name": "DE"
    },
    {
      "type": "channel",
      "name": "CH"
    },
    {
      "type": "extra",
      "name": "default",
      "email": "nicht-existierend@example.com"
    },
    {
      "type": "login",
      "name": "invalid_user",
      "email": "nicht-existierend@example.com",
      "password": "FalschesPasswort123!"
    }
  ],
  "automation": {
    "status": "automated",
    "framework": "Playwright + pytest",
    "repo": "GE-ECommerce-Testing",
    "spec_file": "playwright_tests/tests/test_account.py",
    "function_name": "test_login_wrong_credentials_fails",
    "tags": [
      "account",
      "feature"
    ]
  },
  "orchestration": {
    "parallel_safe": false,
    "timeout_seconds": 60,
    "retry_count": 1
  },
  "meta": {
    "author": "QA Team",
