{
  "test_id": "TC-PROMO-SHIP-010",
  "name": "Versandkostenfrei bleibt bei Einloesegutschein (MBW auf Produktwert)",
  "category": [
    "regression"
  ],
  "priority": "P1",
  "functional_area": "Feature Promotion",
  "schema_version": "3.0.0",
  "scope": {
    "environments": [
      "staging"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Versandkostenfrei-Promotion mit MBW-Bedingung aktiv (z.B. ab 50 EUR/CHF)",
    "Warenkorb mit Produktwert >= MBW",
    "Einloesegutschein (Wertgutschein) mit Guthaben vorhanden"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Postartikel zum Warenkorb hinzufuegen (Produktwert >= MBW, z.B. 60 EUR)",
      "expected": "Produkt im Warenkorb, Produktwert >= MBW"
    },
    {
      "step": 2,
      "action": "Versandkostenfrei-Promocode eingeben",
      "expected": "Versandkosten werden auf 0 reduziert",
      "inputs": [
        {
          "action": "fill",
          "selector": "#addPromotionInput",
          "value_ref": "promo:update_placeholder.code"
        },
        {
          "action": "click",
          "selector": "#addPromotionButton"
        }
      ]
    },
    {
      "step": 3,
      "action": "Einloesegutschein eingeben (z.B. 25 EUR Guthaben)",
      "expected": "Zahlbetrag wird um Gutschein-Guthaben reduziert"
    },
    {
      "step": 4,
      "action": "Pruefen: Zahlbetrag reduziert (z.B. 35 EUR statt 60 EUR)",
      "expected": "Gutschein-Abzug korrekt verrechnet"
    },
    {
      "step": 5,
      "action": "Pruefen: Versandkosten bleiben weiterhin 0",
      "expected": "Versandkostenfrei-Promotion greift trotz Gutschein-Einloesung"
    },
    {
      "step": 6,
      "action": "Pruefen: Produktwert fuer MBW-Berechnung ist unveraendert (60 EUR, nicht 35 EUR)",
      "expected": "MBW basiert auf Produktpreisen vor Gutschein-Abzug"
    },
    {
      "step": 7,
      "action": "Test in AT (EUR), DE (EUR) und CH (CHF) durchfuehren",
      "expected": "Konsistentes Verhalten in allen DACH-Kanaelen"
    }
  ],
  "test_data": [
    {
      "type": "channel",
      "name": "AT"
    },
    {
      "type": "channel",
      "name": "DE"
    },
    {
      "type": "channel",
      "name": "CH"
    },
    {
      "type": "promo",
      "name": "update_placeholder",
      "code": "UPDATETHISCODE",
      "description": "Platzhalter-Code (muss aktualisiert werden)"
    }
  ],
  "automation": {
    "status": "planned",
    "framework": "Playwright + pytest",
    "repo": "GE-ECommerce-Testing",
    "spec_file": "playwright_tests/tests/test_promotions.py",
    "function_name": "test_promo_ship_free_shipping_persists_with_voucher",
    "tags": [
      "promotions",
      "shipping",
      "free-shipping",
      "voucher",
      "minimum-order-value"
    ]
  },
  "orchestration": {
    "parallel_safe": false,
    "timeout_seconds": 60,
    "retry_count": 1
  },
  "meta": {
    "author": "QA Team",
    "created": "2026-02-07",
