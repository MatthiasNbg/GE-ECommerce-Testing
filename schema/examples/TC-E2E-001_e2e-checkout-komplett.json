{
  "test_id": "TC-E2E-001",
  "name": "E2E Checkout komplett (Neuregistrierung + Login, alle Zahlungs-/Versandarten)",
  "category": "e2e",
  "priority": "P0",
  "functional_area": "E2E Tests - Checkout",
  "schema_version": "3.0.0",
  "scope": {
    "environments": [
      "staging"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Testprodukte (Post + Spedition) sind verfuegbar",
    "Registrierung ist aktiviert",
    "Bestehende Testaccounts sind aktiv (ge-at-1@matthias-sax.de, ge-de-1@matthias-sax.de, ge-ch-1@matthias-sax.de)",
    "GlobalPayments Kreditkarten-Gateway ist auf Staging konfiguriert",
    "Kreditkarten-Testdaten sind in config.yaml hinterlegt"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Account vorbereiten (Neuregistrierung oder Login)",
      "expected": "Benutzer ist eingeloggt",
      "inputs": [
        {
          "action": "navigate",
          "value": "/account/login"
        }
      ]
    },
    {
      "step": 2,
      "action": "Produkt(e) zum Warenkorb hinzufuegen (Post und/oder Spedition)",
      "expected": "Warenkorb enthaelt die korrekten Produkte",
      "inputs": [
        {
          "action": "navigate",
          "value_ref": "product:post_product.path"
        },
        {
          "action": "click",
          "selector": "button.btn-buy"
        }
      ]
    },
    {
      "step": 3,
      "action": "Zur Kasse navigieren",
      "expected": "Checkout-Seite wird angezeigt",
      "inputs": [
        {
          "action": "navigate",
          "value": "/checkout/confirm"
        }
      ]
    },
    {
      "step": 4,
      "action": "Zahlungsart auswaehlen (Vorkasse / Rechnung / Kreditkarte)",
      "expected": "Gewaehlte Zahlungsart ist aktiv",
      "inputs": [
        {
          "action": "click",
          "selector": "input[name='paymentMethodId']"
        }
      ]
    },
    {
      "step": 5,
      "action": "Bei Kreditkarte: Kartendaten im GlobalPayments iFrame eingeben",
      "expected": "Kreditkartendaten werden akzeptiert"
    },
    {
      "step": 6,
      "action": "AGB akzeptieren",
      "expected": "AGB-Checkbox ist aktiviert",
      "inputs": [
        {
          "action": "check",
          "selector": "#tos"
        }
      ]
    },
    {
      "step": 7,
      "action": "Bestellung absenden",
      "expected": "Bestellung wird erfolgreich verarbeitet",
      "inputs": [
        {
          "action": "click",
          "selector": "button:has-text('Zahlungspflichtig bestellen')"
        }
      ]
    },
    {
      "step": 8,
      "action": "Bestellbestaetigung pruefen",
      "expected": "Bestellbestaetigungsseite wird angezeigt mit Bestellnummer"
    }
  ],
  "postconditions": [
    "Bestellnummer wird angezeigt",
    "Bestellbestaetigung enthaelt korrekte Daten",
    "Bestellung ist im Shop-Backend sichtbar"
  ],
  "test_data": [
