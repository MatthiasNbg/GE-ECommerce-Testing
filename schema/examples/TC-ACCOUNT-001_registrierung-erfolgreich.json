{
  "test_id": "TC-ACCOUNT-001",
  "name": "Registrierung erfolgreich durchführen",
  "category": "e2e",
  "priority": "P1",
  "schema_version": "2.1.0",
  "scope": {
    "channels": [
      "AT"
    ],
    "environments": [
      "staging"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Registrierungsseite ist erreichbar"
  ],
  "postconditions": [
    "Neuer Account ist angelegt",
    "Benutzer ist eingeloggt"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Registrierungsseite aufrufen",
      "expected": "Registrierungsformular wird angezeigt",
      "inputs": [
        {
          "action": "navigate",
          "value": "/account/login"
        }
      ]
    },
    {
      "step": 2,
      "action": "Eindeutige E-Mail generieren",
      "expected": "Einzigartige E-Mail-Adresse steht zur Verfügung"
    },
    {
      "step": 3,
      "action": "Formulardaten eingeben (Anrede, Vorname, Nachname)",
      "expected": "Persönliche Daten sind im Formular eingetragen",
      "inputs": [
        {
          "action": "select",
          "selector": "#personalSalutation",
          "value": "mr"
        },
        {
          "action": "fill",
          "selector": "#personalFirstName",
          "value": "Test"
        },
        {
          "action": "fill",
          "selector": "#personalLastName",
          "value": "Kunde"
        }
      ]
    },
    {
      "step": 4,
      "action": "E-Mail und Passwort eingeben",
      "expected": "Zugangsdaten sind im Formular eingetragen",
      "inputs": [
        {
          "action": "fill",
          "selector": "#personalMail",
          "value": "test@example.com"
        },
        {
          "action": "fill",
          "selector": "#personalPassword",
          "value": "TestPasswort123!"
        },
        {
          "action": "fill",
          "selector": "#personalPasswordConfirmation",
          "value": "TestPasswort123!"
        }
      ]
    },
    {
      "step": 5,
      "action": "Adresse eingeben (4020 Linz AT)",
      "expected": "Adressdaten sind im Formular eingetragen",
      "inputs": [
        {
          "action": "fill",
          "selector": "#billingAddressAddressStreet",
          "value": "Teststrasse 1"
        },
        {
          "action": "fill",
          "selector": "#billingAddressAddressZipcode",
          "value": "4020"
        },
        {
          "action": "fill",
          "selector": "#billingAddressAddressCity",
          "value": "Linz"
        },
        {
          "action": "select",
          "selector": "#billingAddressAddressCountry",
          "value": "AT"
        }
      ]
    },
    {
      "step": 6,
      "action": "Formular absenden",
      "expected": "Registrierungsformular wird abgeschickt",
      "inputs": [
        {
          "action": "check",
          "selector": "#acceptedDataProtection"
        },
        {
          "action": "click",
          "selector": "button:has-text('Registrieren')"
        }
      ]
    },
    {
      "step": 7,
      "action": "Erfolgreiche Registrierung prüfen",
      "expected": "Benutzer wird auf Account-Seite weitergeleitet oder Bestätigung wird angezeigt"
    }
  ],
  "test_data": [
    {
      "type": "address",
      "name": "default",
      "zip": "4020",
      "city": "Linz",
      "country": "AT"
    },
    {
      "type": "extra",
      "name": "default",
      "password": "TestPasswort123!"
    }
  ],
  "automation": {
    "status": "automated",
    "framework": "Playwright + pytest",
    "repo": "GE-ECommerce-Testing",
    "spec_file": "playwright_tests/tests/test_account.py",
    "function_name": "test_registration_success",
    "tags": [
      "account",
      "feature"
    ]
  },
  "orchestration": {
    "parallel_safe": false,
    "timeout_seconds": 60,
    "retry_count": 1
  },
  "meta": {
    "author": "QA Team",
    "created": "2026-02-03",
    "last_modified": "2026-02-03",
    "version": "1.0"
  }
}
