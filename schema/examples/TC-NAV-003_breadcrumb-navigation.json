{
  "test_id": "TC-NAV-003",
  "name": "Breadcrumb-Navigation",
  "category": "e2e",
  "priority": "P2",
  "functional_area": "Navigation",
  "schema_version": "2.2.0",
  "scope": {
    "environments": [
      "staging",
      "production"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Testprodukt Duftkissen Lavendel ist verfuegbar"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Produktseite aufrufen",
      "expected": "Produktseite laedt korrekt",
      "inputs": [
        {
          "action": "navigate",
          "value": "/p/duftkissen-lavendel/ge-p-49415"
        }
      ]
    },
    {
      "step": 2,
      "action": "Cookie-Banner akzeptieren",
      "expected": "Banner wird geschlossen",
      "inputs": [
        {
          "action": "click",
          "selector": "button#accept"
        }
      ]
    },
    {
      "step": 3,
      "action": "Breadcrumb-Navigation auf Sichtbarkeit pruefen",
      "expected": "Breadcrumb ist sichtbar und zeigt Hierarchie",
      "selector_hint": ".breadcrumb, nav[aria-label='breadcrumb']",
      "inputs": [
        {
          "action": "wait",
          "selector": ".breadcrumb, nav[aria-label='breadcrumb']"
        }
      ],
      "assert": [
        {
          "type": "element_visible",
          "selector": ".breadcrumb",
          "message": "Breadcrumb muss sichtbar sein"
        }
      ]
    },
    {
      "step": 4,
      "action": "Breadcrumb-Elemente pruefen",
      "expected": "Breadcrumb enthaelt mindestens Home und Produktname",
      "selector_hint": ".breadcrumb-item, .breadcrumb-link"
    },
    {
      "step": 5,
      "action": "Breadcrumb-Link anklicken (uebergeordnete Kategorie)",
      "expected": "Navigation zur uebergeordneten Kategorie funktioniert",
      "inputs": [
        {
          "action": "click",
          "selector": ".breadcrumb-item a, .breadcrumb-link"
        }
      ]
    },
    {
      "step": 6,
      "action": "Zielseite nach Breadcrumb-Klick pruefen",
      "expected": "Kategorieseite der uebergeordneten Kategorie wird angezeigt"
    }
  ],
  "test_data": [
    {
      "type": "channel",
      "name": "AT"
    },
    {
      "type": "channel",
      "name": "DE"
    },
    {
      "type": "channel",
      "name": "CH"
    },
    {
      "type": "product",
      "name": "duftkissen_lavendel",
      "path": "p/duftkissen-lavendel/ge-p-49415",
      "product_name": "Duftkissen Lavendel"
    }
  ],
  "automation": {
    "status": "planned",
    "framework": "Playwright + pytest",
    "repo": "GE-ECommerce-Testing",
    "spec_file": "playwright_tests/tests/test_navigation.py",
    "function_name": "test_breadcrumb_navigation",
    "tags": [
      "navigation",
      "feature"
    ]
  },
  "orchestration": {
    "parallel_safe": true,
    "timeout_seconds": 30,
    "retry_count": 1
  },
  "meta": {
    "author": "QA Team",
    "created": "2026-02-06",
    "last_modified": "2026-02-06",
    "version": "1.0"
  }
}