{
  "test_id": "TC-E2E-002",
  "name": "Gast-Checkout ohne Account-Erstellung",
  "category": [
    "e2e"
  ],
  "priority": "P0",
  "functional_area": "E2E Tests - Checkout",
  "schema_version": "3.0.0",
  "scope": {
    "environments": [
      "staging"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Testprodukte (Post + Spedition) sind verfuegbar",
    "Gast-Checkout ist aktiviert",
    "GlobalPayments Kreditkarten-Gateway ist auf Staging konfiguriert"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Produkt(e) zum Warenkorb hinzufuegen (Post und/oder Spedition)",
      "expected": "Warenkorb enthaelt die korrekten Produkte",
      "inputs": [
        {
          "action": "navigate",
          "value_ref": "product:post_product.path"
        },
        {
          "action": "click",
          "selector": "button.btn-buy"
        }
      ]
    },
    {
      "step": 2,
      "action": "Warenkorb oeffnen und 'Zur Kasse' klicken",
      "expected": "Checkout-Register-Seite wird angezeigt",
      "inputs": [
        {
          "action": "navigate",
          "value": "/checkout/cart"
        },
        {
          "action": "click",
          "selector": "a:has-text('Zur Kasse')"
        }
      ]
    },
    {
      "step": 3,
      "action": "'Als Gast bestellen' waehlen und Adressdaten ausfuellen",
      "expected": "Gastformular wird angezeigt, Daten werden akzeptiert",
      "inputs": [
        {
          "action": "click",
          "selector": "button:has-text('Als Gast bestellen')"
        },
        {
          "action": "fill",
          "selector": "#billingAddress-personalFirstName",
          "value_ref": "address:billing.first_name"
        },
        {
          "action": "fill",
          "selector": "#billingAddress-personalLastName",
          "value_ref": "address:billing.last_name"
        },
        {
          "action": "fill",
          "selector": "#personalMail",
          "value_ref": "login:guest_named.email"
        },
        {
          "action": "fill",
          "selector": "#billingAddress-AddressStreet",
          "value_ref": "address:billing.street"
        },
        {
          "action": "fill",
          "selector": "#billingAddressAddressZipcode",
          "value_ref": "address:billing.zip"
        },
        {
          "action": "fill",
          "selector": "#billingAddressAddressCity",
          "value_ref": "address:billing.city"
        }
      ]
    },
    {
      "step": 4,
      "action": "Datenschutz akzeptieren und 'Weiter' klicken",
      "expected": "Navigation zur Checkout-Confirm-Seite",
      "inputs": [
        {
          "action": "check",
          "selector": "#acceptedDataProtection"
        },
        {
          "action": "click",
          "selector": "button:has-text('Weiter')"
        }
      ]
    },
    {
      "step": 5,
      "action": "Zahlungsart auswaehlen (Vorkasse / Rechnung / Kreditkarte)",
      "expected": "Gewaehlte Zahlungsart ist aktiv",
      "inputs": [
        {
          "action": "click",
          "selector": "input[name='paymentMethodId']"
        }
      ]
    },
    {
      "step": 6,
      "action": "AGB akzeptieren",
      "expected": "AGB-Checkbox ist aktiviert",
      "inputs": [
        {
          "action": "check",
          "selector": "#tos"
        }
      ]
    },
    {
      "step": 7,
      "action": "Bestellung absenden",
      "expected": "Bestellung wird erfolgreich verarbeitet",
      "inputs": [
        {
          "action": "click",
          "selector": "button:has-text('Zahlungspflichtig bestellen')"
        }
      ]
    },
    {
      "step": 8,
      "action": "Bestellbestaetigung pruefen",
      "expected": "Bestellbestaetigungsseite wird angezeigt mit Bestellnummer"
    }
  ],
  "postconditions": [
    "Bestellnummer wird angezeigt",
    "Bestellbestaetigung enthaelt korrekte Daten",
    "Kein Account wurde angelegt (Gast-Bestellung)"
  ],
