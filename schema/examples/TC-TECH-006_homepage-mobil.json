{
  "test_id": "TC-TECH-006",
  "name": "Homepage korrekt im mobilen Viewport",
  "category": "e2e",
  "priority": "P1",
  "functional_area": "Responsive/Mobile",
  "schema_version": "2.2.0",
  "scope": {
    "environments": [
      "staging",
      "production"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Viewport auf 375x812 (iPhone) gesetzt"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Viewport auf 375x812 setzen und Startseite aufrufen",
      "expected": "Seite laedt korrekt im mobilen Viewport",
      "inputs": [
        {
          "action": "navigate",
          "value": "/"
        }
      ]
    },
    {
      "step": 2,
      "action": "Pruefen ob kein horizontaler Overflow vorhanden ist",
      "expected": "Seitenbreite ueberschreitet nicht die Viewport-Breite"
    },
    {
      "step": 3,
      "action": "Pruefen ob Mobile-Menu-Toggle sichtbar ist",
      "expected": "Hamburger-Menue-Button ist sichtbar",
      "selector_hint": ".menu-button, .nav-main-toggle-btn, button.navbar-toggler, .js-offcanvas-menu-trigger"
    },
    {
      "step": 4,
      "action": "Pruefen ob Logo sichtbar ist",
      "expected": "Shop-Logo ist im Header sichtbar"
    }
  ],
  "automation": {
    "status": "planned",
    "framework": "Playwright + pytest",
    "repo": "GE-ECommerce-Testing",
    "spec_file": "playwright_tests/tests/test_technical.py",
    "function_name": "test_homepage_mobile_viewport",
    "tags": [
      "technical",
      "responsive"
    ]
  },
  "orchestration": {
    "parallel_safe": true,
    "timeout_seconds": 30,
    "retry_count": 1,
    "worker_requirements": {
      "viewport": "mobile"
    }
  },
  "meta": {
    "author": "QA Team",
    "created": "2026-02-06",
    "last_modified": "2026-02-06",
    "version": "1.0"
  }
}