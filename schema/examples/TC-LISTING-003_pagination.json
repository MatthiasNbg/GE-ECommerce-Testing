{
  "test_id": "TC-LISTING-003",
  "name": "Pagination",
  "category": "e2e",
  "priority": "P2",
  "functional_area": "Feature Listing",
  "schema_version": "2.2.0",
  "scope": {
    "environments": [
      "staging",
      "production"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Kategorie-Seite mit vielen Produkten existiert",
    "Pagination ist sichtbar"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Kategorie-Seite mit vielen Produkten aufrufen",
      "expected": "Kategorie-Seite laedt korrekt mit Produkten",
      "inputs": [
        {
          "action": "navigate",
          "value": "/moebel/"
        }
      ]
    },
    {
      "step": 2,
      "action": "Pagination pruefen",
      "expected": "Pagination-Navigation ist sichtbar"
    },
    {
      "step": 3,
      "action": "Seite 2 anklicken",
      "expected": "Seite 2 wird geladen",
      "inputs": [
        {
          "action": "click",
          "selector": ".page-link"
        }
      ]
    },
    {
      "step": 4,
      "action": "URL pruefen",
      "expected": "URL enthaelt Seitenparameter (p=2)"
    },
    {
      "step": 5,
      "action": "Andere Produkte angezeigt",
      "expected": "Produkte auf Seite 2 unterscheiden sich von Seite 1"
    }
  ],
  "automation": {
    "status": "planned",
    "framework": "Playwright + pytest",
    "repo": "GE-ECommerce-Testing",
    "spec_file": "playwright_tests/tests/test_listing.py",
    "function_name": "test_pagination",
    "tags": [
      "listing",
      "feature"
    ]
  },
  "orchestration": {
    "parallel_safe": true,
    "timeout_seconds": 30,
    "retry_count": 1
  },
  "meta": {
    "author": "QA Team",
    "created": "2026-02-06",
    "last_modified": "2026-02-06",
    "version": "1.0"
  }
}