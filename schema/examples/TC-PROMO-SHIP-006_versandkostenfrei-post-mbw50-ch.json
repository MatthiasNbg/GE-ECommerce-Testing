    "Land = CH",
    "Postversand Schweiz als Versandart",
    "Shopware-Regel GE_Promo_MBW50_LieferlandCH_nurPostversand aktiv"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Warenkorb mit Postartikeln unter 50 CHF befuellen",
      "expected": "Warenwert unter MBW"
    },
    {
      "step": 2,
      "action": "Promotion-Code eingeben",
