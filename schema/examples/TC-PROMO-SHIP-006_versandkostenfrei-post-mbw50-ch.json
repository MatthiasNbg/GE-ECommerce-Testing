    {
      "step": 4,
      "action": "Promotion-Code erneut eingeben",
      "expected": "Code wird akzeptiert"
    },
    {
      "step": 5,
      "action": "Pruefen: Versandkosten auf 0 reduziert",
      "expected": "Rabatt von 6,95 CHF auf Versandkosten"
    }
