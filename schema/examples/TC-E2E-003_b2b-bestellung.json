{
  "test_id": "TC-E2E-003",
  "name": "B2B-Bestellung als Geschaeftskunde (Gast)",
  "category": [
    "e2e"
  ],
  "priority": "P1",
  "functional_area": "E2E Tests - Checkout",
  "schema_version": "3.0.0",
  "scope": {
    "environments": [
      "staging"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Post-Produkt ist verfuegbar",
    "Gast-Checkout ist aktiviert",
    "Kontotyp 'Gewerblich' ist im Checkout verfuegbar",
    "Felder fuer Firma und USt-ID werden bei 'Gewerblich' angezeigt"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Post-Produkt zum Warenkorb hinzufuegen",
      "expected": "Produkt ist im Warenkorb",
      "inputs": [
        {
          "action": "navigate",
          "value_ref": "product:post_product.path"
        },
        {
          "action": "click",
          "selector": "button.btn-buy"
        }
      ]
    },
    {
      "step": 2,
      "action": "Warenkorb oeffnen und 'Zur Kasse' klicken",
      "expected": "Checkout-Register-Seite wird angezeigt",
      "inputs": [
        {
          "action": "navigate",
          "value": "/checkout/cart"
        },
        {
          "action": "click",
          "selector": "a:has-text('Zur Kasse')"
        }
      ]
    },
    {
      "step": 3,
      "action": "'Als Gast bestellen' waehlen, Kontotyp 'Gewerblich' auswaehlen",
      "expected": "Felder fuer Firma und USt-ID werden angezeigt",
      "inputs": [
        {
          "action": "click",
          "selector": "button:has-text('Als Gast bestellen')"
        },
        {
          "action": "select",
          "selector": "#-accountType",
          "value_ref": "address:billing.account_type"
        }
      ]
    },
    {
      "step": 4,
      "action": "Firma und USt-ID ausfuellen",
      "expected": "Geschaeftskunden-Daten werden akzeptiert",
      "inputs": [
        {
          "action": "fill",
          "selector": "#billingAddresscompany",
          "value_ref": "address:billing.company"
        },
        {
          "action": "fill",
          "selector": "#vatIds",
          "value_ref": "address:billing.vat_id"
        }
      ]
    },
    {
      "step": 5,
      "action": "Persoenliche Daten und Adresse ausfuellen",
      "expected": "Formulardaten werden akzeptiert",
      "inputs": [
        {
          "action": "fill",
          "selector": "#billingAddress-personalFirstName",
          "value_ref": "address:billing.first_name"
        },
        {
          "action": "fill",
          "selector": "#billingAddress-personalLastName",
          "value_ref": "address:billing.last_name"
        },
        {
          "action": "fill",
          "selector": "#personalMail",
          "value_ref": "login:b2b_customer.email"
        },
        {
          "action": "fill",
          "selector": "#billingAddress-AddressStreet",
          "value_ref": "address:billing.street"
        },
        {
          "action": "fill",
          "selector": "#billingAddressAddressZipcode",
          "value_ref": "address:billing.zip"
        },
        {
          "action": "fill",
          "selector": "#billingAddressAddressCity",
          "value_ref": "address:billing.city"
        }
      ]
    },
    {
      "step": 6,
      "action": "Datenschutz akzeptieren und 'Weiter' klicken",
      "expected": "Navigation zur Checkout-Confirm-Seite",
      "inputs": [
        {
          "action": "check",
          "selector": "#acceptedDataProtection"
        },
        {
          "action": "click",
          "selector": "button:has-text('Weiter')"
        }
      ]
    },
    {
      "step": 7,
      "action": "Zahlungsart auswaehlen und AGB akzeptieren",
      "expected": "Zahlungsart aktiv, AGB-Checkbox aktiviert",
      "inputs": [
        {
          "action": "click",
          "selector": "input[name='paymentMethodId']"
        },
        {
          "action": "check",
          "selector": "#tos"
        }
      ]
    },
    {
      "step": 8,
      "action": "Bestellung absenden",
      "expected": "Bestellung wird erfolgreich verarbeitet",
      "inputs": [
        {
          "action": "click",
          "selector": "button:has-text('Zahlungspflichtig bestellen')"
        }
      ]
    },
    {
      "step": 9,
      "action": "Bestellbestaetigung pruefen",
      "expected": "Bestellbestaetigungsseite wird angezeigt mit Bestellnummer"
    }
  ],
  "postconditions": [
    "Bestellnummer wird angezeigt",
    "Bestellbestaetigung enthaelt korrekte Daten",
    "Bestellung wurde als Geschaeftskunde aufgegeben"
  ],
