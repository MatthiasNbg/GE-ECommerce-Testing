{
  "test_id": "TC-CART-GIFT-001",
  "name": "Reguläres Produkt kann nicht zu Warenkorb mit Einkaufsgutschein hinzugefügt werden",
  "category": "regression",
  "priority": "P1",
  "functional_area": "Feature Warenkorb",
  "schema_version": "3.0.0",
  "scope": {
    "environments": [
      "staging"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Einkaufsgutschein-Produkt ist verfügbar",
    "Reguläres Testprodukt ist verfügbar",
    "Warenkorb ist leer"
  ],
  "postconditions": [
    "Nur Einkaufsgutschein bleibt im Warenkorb",
    "Reguläres Produkt wurde NICHT hinzugefügt",
    "Fehlermeldung wurde angezeigt"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Einkaufsgutschein-Produktseite aufrufen",
      "expected": "Produktseite für Einkaufsgutschein lädt korrekt",
      "inputs": [
        {
          "action": "navigate",
          "value": "/p/einkaufsgutschein/ge-p-GUTSCHEIN"
        }
      ]
    },
    {
      "step": 2,
      "action": "Cookie-Banner akzeptieren falls vorhanden",
      "expected": "Banner wird geschlossen",
      "inputs": [
        {
          "action": "click",
          "selector": "button#accept"
        }
      ]
    },
    {
      "step": 3,
      "action": "Einkaufsgutschein zum Warenkorb hinzufügen",
      "expected": "Gutschein wird zum Warenkorb hinzugefügt, Offcanvas-Cart öffnet sich",
      "inputs": [
        {
          "action": "click",
          "selector": "button.btn-buy"
        }
      ]
    },
    {
      "step": 4,
      "action": "Offcanvas-Cart schließen",
      "expected": "Cart wird geschlossen",
      "inputs": [
        {
          "action": "click",
          "selector": ".offcanvas-close, .btn-close"
        }
      ]
    },
    {
      "step": 5,
      "action": "Reguläres Produkt aufrufen",
      "expected": "Produktseite lädt korrekt",
      "inputs": [
        {
          "action": "navigate",
          "value": "/p/kurzarmshirt-aus-bio-baumwolle/ge-p-862990"
        }
      ]
    },
    {
      "step": 6,
      "action": "Reguläres Produkt zum Warenkorb hinzufügen versuchen",
      "expected": "Produkt wird NICHT hinzugefügt",
      "inputs": [
        {
          "action": "click",
          "selector": "button.btn-buy"
        }
      ]
    },
    {
      "step": 7,
      "action": "Fehlermeldung im Offcanvas-Cart prüfen",
      "expected": "Fehlermeldung wird angezeigt: 'Einkaufsgutscheine können nur separat gekauft werden. Bitte schließen Sie den Kauf ab oder entfernen Sie die Einkaufsgutscheine von Ihrem Warenkorb.'",
      "selector_hint": ".offcanvas-cart .alert, .offcanvas-cart .flash-message",
      "assert": [
        {
          "type": "element_visible",
          "selector": ".offcanvas-cart .alert",
          "message": "Fehlermeldung muss im Offcanvas-Cart sichtbar sein"
        },
        {
          "type": "element_contains_text",
          "selector": ".offcanvas-cart .alert",
          "expected": "Einkaufsgutscheine können nur separat gekauft werden",
          "message": "Korrekte Fehlermeldung muss angezeigt werden"
        }
      ]
    },
    {
      "step": 8,
      "action": "Warenkorb-Inhalt prüfen",
      "expected": "Nur Einkaufsgutschein ist im Warenkorb, reguläres Produkt fehlt",
      "selector_hint": ".offcanvas-cart .line-item",
      "assert": [
        {
          "type": "element_visible",
          "selector": ".offcanvas-cart .line-item",
          "message": "Mindestens ein Produkt muss im Warenkorb sein"
        }
      ]
    }
  ],
  "test_data": [
    {
      "type": "channel",
      "name": "AT"
    },
    {
      "type": "channel",
      "name": "DE"
    },
    {
      "type": "channel",
      "name": "CH"
    },
    {
      "type": "product",
      "name": "gift_card",
      "path": "p/einkaufsgutschein/ge-p-GUTSCHEIN",
      "product_name": "Einkaufsgutschein"
    },
    {
      "type": "product",
      "name": "regular",
      "path": "p/kurzarmshirt-aus-bio-baumwolle/ge-p-862990",
      "product_name": "Kurzarmshirt aus Bio-Baumwolle"
    }
  ],
  "automation": {
    "status": "planned",
    "framework": "Playwright + pytest",
    "repo": "GE-ECommerce-Testing",
    "spec_file": "playwright_tests/tests/test_cart_gift_voucher.py",
    "function_name": "test_regular_product_blocked_when_gift_card_in_cart",
    "tags": [
      "regression",
      "cart",
      "gift-voucher",
      "validation"
    ]
  },
  "orchestration": {
    "parallel_safe": false,
    "timeout_seconds": 60,
    "retry_count": 1
  },
  "meta": {
    "author": "QA Team",
    "created": "2026-02-05",
    "last_modified": "2026-02-05",
    "version": "1.0"
  }
}
