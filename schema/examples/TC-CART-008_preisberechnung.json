{
  "test_id": "TC-CART-008",
  "name": "Preisberechnung im Warenkorb korrekt (Einzelpreis x Menge)",
  "category": "regression",
  "priority": "P0",
  "functional_area": "Feature Warenkorb",
  "schema_version": "3.0.0",
  "scope": {
    "environments": [
      "staging",
      "production"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Testprodukt ist verfügbar und auf Lager"
  ],
  "postconditions": [
    "Gesamtpreis entspricht Einzelpreis × Menge (±1% Toleranz)"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Produktseite aufrufen und Produkt zum Warenkorb hinzufügen",
      "expected": "Produkt wird zum Warenkorb hinzugefügt",
      "selector_hint": ".btn-buy, [data-add-to-cart]",
      "inputs": [
        {
          "action": "navigate",
          "value_ref": "product:default.path"
        },
        {
          "action": "click",
          "selector": "button.btn-buy"
        }
      ]
    },
    {
      "step": 2,
      "action": "Warenkorb öffnen",
      "expected": "Warenkorb-Seite wird angezeigt mit dem Produkt",
      "inputs": [
        {
          "action": "navigate",
          "value": "/checkout/cart"
        }
      ]
    },
    {
      "step": 3,
      "action": "Einzelpreis des Produkts lesen",
      "expected": "Einzelpreis ist sichtbar und wird gespeichert",
      "selector_hint": ".line-item-unit-price"
    },
    {
      "step": 4,
      "action": "Menge auf 3 ändern",
      "expected": "Mengenfeld wird auf 3 gesetzt und Warenkorb aktualisiert sich",
      "selector_hint": "input[name='quantity']",
      "inputs": [
        {
          "action": "fill",
          "selector": "input[name='quantity']",
          "value_ref": "extra:config.quantity"
        }
      ]
    },
    {
      "step": 5,
      "action": "Gesamtpreis des Line-Items prüfen (Einzelpreis x 3)",
      "expected": "Gesamtpreis entspricht Einzelpreis × 3 mit maximal 1% Abweichung",
      "selector_hint": ".line-item-total-price"
    }
  ],
  "test_data": [
    {
      "type": "channel",
      "name": "AT"
    },
    {
      "type": "channel",
      "name": "DE"
    },
    {
      "type": "channel",
      "name": "CH"
    },
    {
      "type": "product",
      "name": "default",
      "path": "p/bademantel-raute-fuer-damen-und-herren/ge-p-410933",
      "product_name": "Bademantel Raute für Damen und Herren",
      "article_number": "410933"
    },
    {
      "type": "extra",
      "name": "default",
      "new_quantity": 3,
      "price_tolerance_percent": 1
    },
    {
      "type": "extra",
      "name": "config",
      "quantity": "3"
    }
  ],
  "automation": {
    "status": "automated",
    "framework": "Playwright + pytest",
    "repo": "GE-ECommerce-Testing",
    "spec_file": "playwright_tests/tests/test_cart.py",
    "function_name": "test_price_calculation_correct",
    "tags": [
      "regression",
      "cart",
      "feature"
    ]
  },
  "orchestration": {
    "parallel_safe": false,
    "timeout_seconds": 45,
