{
  "test_id": "TC-PROMO-SHIP-002",
  "name": "Versandkostenfrei nur Post (CH)",
  "category": [
    "regression"
  ],
  "priority": "P1",
  "functional_area": "Feature Promotion",
  "schema_version": "3.0.0",
  "scope": {
    "environments": [
      "staging"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Land = CH",
    "Postversand Schweiz als Versandart",
    "Shopware-Regel GE_Promo_LieferlandCH_nurPostversand aktiv"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Warenkorb mit Postartikeln befuellen (CH-Kanal)",
      "expected": "Postartikel im Warenkorb"
    },
    {
      "step": 2,
      "action": "Promotion-Code eingeben",
      "expected": "Code wird akzeptiert",
      "inputs": [
        {
          "action": "fill",
          "selector": "#addPromotionInput",
          "value_ref": "promo:update_placeholder.code"
        },
        {
          "action": "click",
          "selector": "#addPromotionButton"
        }
      ]
    },
    {
      "step": 3,
      "action": "Pruefen: Versandkosten auf 0 reduziert",
      "expected": "Rabatt von 6,95 CHF auf Versandkosten"
    },
    {
      "step": 4,
      "action": "Pruefen: Nur Postversand CH betroffen",
      "expected": "Speditionsversand nicht betroffen"
    }
  ],
  "test_data": [
    {
      "type": "channel",
      "name": "CH"
    },
    {
      "type": "promo",
      "name": "update_placeholder",
      "code": "UPDATETHISCODE",
      "description": "Platzhalter-Code (muss aktualisiert werden)"
    }
  ],
  "automation": {
    "status": "planned",
    "framework": "Playwright + pytest",
    "repo": "GE-ECommerce-Testing",
    "spec_file": "playwright_tests/tests/test_promotions.py",
    "function_name": "test_tc_promo_ship_002",
    "tags": [
      "promotions",
      "shipping",
      "free-shipping",
      "ch"
    ]
  },
  "orchestration": {
    "parallel_safe": false,
    "timeout_seconds": 60,
    "retry_count": 1
  },
