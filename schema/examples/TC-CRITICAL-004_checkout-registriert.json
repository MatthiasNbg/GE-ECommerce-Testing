{
  "test_id": "TC-CRITICAL-004",
  "name": "Checkout mit registriertem Benutzer",
  "category": "e2e",
  "priority": "P0",
  "schema_version": "2.1.0",
  "scope": {
    "channels": [
      "AT"
    ],
    "environments": [
      "staging"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Testprodukt ist verfügbar",
    "Gast-Checkout ist aktiviert",
    "Bestehender Kundenaccount mit Zugangsdaten"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Produkt zum Warenkorb hinzufügen",
      "expected": "Produkt ist im Warenkorb sichtbar",
      "inputs": [
        {
          "action": "navigate",
          "value": "/p/kurzarmshirt-aus-bio-baumwolle/ge-p-862990"
        },
        {
          "action": "click",
          "selector": "button.btn-buy"
        }
      ]
    },
    {
      "step": 2,
      "action": "Einloggen mit Testaccount",
      "expected": "Benutzer ist erfolgreich eingeloggt",
      "inputs": [
        {
          "action": "fill",
          "selector": "#loginMail",
          "value": "test@example.com"
        },
        {
          "action": "fill",
          "selector": "#loginPassword",
          "value": "TestPasswort123!"
        },
        {
          "action": "click",
          "selector": "button:has-text('Anmelden')"
        }
      ]
    },
    {
      "step": 3,
      "action": "Zahlungsart wählen",
      "expected": "Zahlungsart ist ausgewählt",
      "inputs": [
        {
          "action": "click",
          "selector": ".payment-method:has-text('Rechnung')"
        }
      ]
    },
    {
      "step": 4,
      "action": "AGB akzeptieren",
      "expected": "AGB-Checkbox ist aktiviert",
      "inputs": [
        {
          "action": "check",
          "selector": "#tos"
        }
      ]
    },
    {
      "step": 5,
      "action": "Bestellung absenden",
      "expected": "Bestellung wird erfolgreich verarbeitet",
      "inputs": [
        {
          "action": "click",
          "selector": "button:has-text('Zahlungspflichtig bestellen')"
        }
      ]
    },
    {
      "step": 6,
      "action": "Bestellbestätigung prüfen",
      "expected": "Bestellbestätigungsseite wird angezeigt mit Bestellnummer"
    }
  ],
  "postconditions": [
    "Bestellnummer wird angezeigt",
    "Bestellbestätigung enthält korrekte Daten"
  ],
  "test_data": [
    {
      "type": "payment",
      "name": "default",
      "method": "invoice"
    },
    {
      "type": "extra",
      "name": "default",
      "user_type": "registered"
    }
  ],
  "automation": {
    "status": "automated",
    "framework": "Playwright + pytest",
    "repo": "GE-ECommerce-Testing",
    "spec_file": "playwright_tests/tests/test_critical_path.py",
    "function_name": "test_registered_user_checkout",
    "tags": [
      "critical",
      "checkout"
    ]
  },
  "orchestration": {
    "parallel_safe": false,
    "timeout_seconds": 120,
    "retry_count": 1
  },
  "meta": {
    "author": "QA Team",
    "created": "2026-02-03",
    "last_modified": "2026-02-03",
    "version": "1.0"
  }
}
