{
  "test_id": "TC-PROMO-SALE-001",
  "name": "Rabatt auf Lieblingsprodukt (Aktionspreis)",
  "category": "regression",
  "priority": "P1",
  "functional_area": "Feature Promotion",
  "schema_version": "3.0.0",
  "scope": {
    "environments": [
      "staging"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Promotion-Code Liebling20 (oder je nach Kampagne) ist aktiv",
    "Rabatt: Prozentual auf teuerstes Produkt",
    "Aktive Kampagne mit gueltigem Zeitraum"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Mehrere Produkte zum Warenkorb hinzufuegen",
      "expected": "Produkte im Warenkorb"
    },
    {
      "step": 2,
      "action": "Promotion-Code Liebling20 eingeben",
      "expected": "Code wird akzeptiert",
      "inputs": [
        {
          "action": "fill",
          "selector": "#addPromotionInput",
          "value": "UPDATETHISCODE"
        },
        {
          "action": "click",
          "selector": "#addPromotionButton"
        }
      ]
    },
    {
      "step": 3,
      "action": "Pruefen: Rabatt auf teuerstes Produkt angewendet",
      "expected": "20% Rabatt auf teuerstes Produkt"
    },
    {
      "step": 4,
      "action": "Aktionspreis-Berechnung validieren",
      "expected": "Durchgestrichener Originalpreis angezeigt"
    },
    {
      "step": 5,
      "action": "Test in allen Verkaufskanaelen (AT, DE, CH)",
      "expected": "Konsistentes Verhalten"
    }
  ],
  "test_data": [
    {
      "type": "channel",
      "name": "AT"
    },
    {
      "type": "channel",
      "name": "DE"
    },
    {
      "type": "channel",
      "name": "CH"
    }
  ],
