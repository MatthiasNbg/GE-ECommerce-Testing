{
  "test_id": "TC-NEWSLETTER-009",
  "name": "Freundeskreis-Anmeldung im Checkout (Emarsys)",
  "category": [
    "e2e"
  ],
  "priority": "P2",
  "functional_area": "Feature Newsletter",
  "schema_version": "3.0.0",
  "scope": {
    "environments": [
      "staging",
      "production"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Produkt ist im Warenkorb",
    "Freundeskreis-Checkbox ist auf der Checkout-Register-Seite sichtbar",
    "Emarsys-Integration ist aktiv"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Checkout-Register-Seite aufrufen (Gast oder Neuregistrierung)",
      "expected": "Checkout-Register-Formular wird angezeigt",
      "inputs": [
        {
          "action": "navigate",
          "value": "/checkout/register"
        }
      ]
    },
    {
      "step": 2,
      "action": "Freundeskreis-Checkbox im Checkout aktivieren",
      "expected": "Freundeskreis-Checkbox ist aktiviert",
      "inputs": [
        {
          "action": "check",
          "selector": "#acceptedFriendscircle"
        }
      ]
    },
    {
      "step": 3,
      "action": "Checkout-Formular ausfuellen und absenden",
      "expected": "Checkout wird fortgesetzt"
    },
    {
      "step": 4,
      "action": "MANUELL: E-Mail-Postfach pruefen",
      "expected": "Freundeskreis-Bestaetigungs-E-Mail von Emarsys ist eingegangen"
    }
  ],
  "postconditions": [
    "E-Mail von Emarsys wurde empfangen",
    "Freundeskreis-Anmeldung ist im Emarsys-System hinterlegt"
  ],
