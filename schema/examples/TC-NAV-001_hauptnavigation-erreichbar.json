{
  "test_id": "TC-NAV-001",
  "name": "Hauptnavigation erreichbar",
  "category": "e2e",
  "priority": "P1",
  "functional_area": "Navigation",
  "schema_version": "2.2.0",
  "scope": {
    "environments": [
      "staging",
      "production"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Homepage laedt korrekt"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Startseite aufrufen",
      "expected": "Homepage laedt ohne Fehler",
      "inputs": [
        {
          "action": "navigate",
          "value": "/"
        }
      ]
    },
    {
      "step": 2,
      "action": "Cookie-Banner akzeptieren",
      "expected": "Banner wird geschlossen",
      "inputs": [
        {
          "action": "click",
          "selector": "button#accept"
        }
      ]
    },
    {
      "step": 3,
      "action": "Hauptnavigation auf Sichtbarkeit pruefen",
      "expected": "Hauptnavigation ist sichtbar",
      "selector_hint": ".main-navigation-menu, .nav-main, nav.main-navigation",
      "inputs": [
        {
          "action": "wait",
          "selector": ".main-navigation-menu, .nav-main, nav.main-navigation"
        }
      ]
    },
    {
      "step": 4,
      "action": "Kategorie Schlafen in Navigation pruefen",
      "expected": "Link 'Schlafen' ist sichtbar und klickbar",
      "selector_hint": ".main-navigation-link"
    },
    {
      "step": 5,
      "action": "Kategorie Moebel in Navigation pruefen",
      "expected": "Link 'Moebel' ist sichtbar und klickbar",
      "selector_hint": ".main-navigation-link"
    },
    {
      "step": 6,
      "action": "Kategorie Heimtextilien in Navigation pruefen",
      "expected": "Link 'Heimtextilien' ist sichtbar und klickbar",
      "selector_hint": ".main-navigation-link"
    },
    {
      "step": 7,
      "action": "Kategorie Wohnaccessoires in Navigation pruefen",
      "expected": "Link 'Wohnaccessoires' ist sichtbar und klickbar",
      "selector_hint": ".main-navigation-link"
    },
    {
      "step": 8,
      "action": "Kategorie Kleidung in Navigation pruefen",
      "expected": "Link 'Kleidung' ist sichtbar und klickbar",
      "selector_hint": ".main-navigation-link"
    },
    {
      "step": 9,
      "action": "Kategorie Kinder in Navigation pruefen",
      "expected": "Link 'Kinder' ist sichtbar und klickbar",
      "selector_hint": ".main-navigation-link"
    }
  ],
  "test_data": [
