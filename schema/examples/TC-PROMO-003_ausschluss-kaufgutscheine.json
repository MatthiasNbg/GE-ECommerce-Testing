{
  "test_id": "TC-PROMO-003",
  "name": "Ausschluss Kaufgutscheine mit Rabatten",
  "category": [
    "regression"
  ],
  "priority": "P1",
  "functional_area": "Feature Promotion",
  "schema_version": "3.0.0",
  "scope": {
    "environments": [
      "staging"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Einkaufsgutschein verfuegbar (z.B. 50 EUR Gutschein, HC Code 6609)",
    "Aktive Warenkorb-Promotion vorhanden",
    "Shopware-Regel [GE-Template-Warenkorb] mit Gutschein-Ausschluss konfiguriert"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Einkaufsgutschein zum Warenkorb hinzufuegen",
      "expected": "Gutschein im Warenkorb"
    },
    {
      "step": 2,
      "action": "Promotion-Code eingeben",
      "expected": "Code wird verarbeitet",
      "inputs": [
        {
          "action": "fill",
          "selector": "#addPromotionInput",
          "value_ref": "promo:update_placeholder.code"
        },
        {
          "action": "click",
          "selector": "#addPromotionButton"
        }
      ]
    },
    {
      "step": 3,
      "action": "Pruefen: Rabatt NICHT auf Gutschein angewendet",
      "expected": "Gutscheinpreis bleibt unveraendert beim Nennwert"
    },
    {
      "step": 4,
      "action": "Pruefen: Promotion wird ggf. auf andere rabattierbare Artikel angewendet",
      "expected": "Kein Rabatt auf den Gutschein selbst"
    }
  ],
  "test_data": [
    {
      "type": "channel",
      "name": "AT"
    },
    {
      "type": "channel",
      "name": "DE"
    },
    {
      "type": "channel",
      "name": "CH"
    },
    {
      "type": "promo",
      "name": "update_placeholder",
      "code": "UPDATETHISCODE",
      "description": "Platzhalter-Code (muss aktualisiert werden)"
    }
  ],
  "automation": {
    "status": "planned",
    "framework": "Playwright + pytest",
    "repo": "GE-ECommerce-Testing",
    "spec_file": "playwright_tests/tests/test_promotions.py",
    "function_name": "test_tc_promo_003",
    "tags": [
      "promotions",
      "exclusion",
      "gift-voucher"
    ]
  },
  "orchestration": {
    "parallel_safe": false,
    "timeout_seconds": 60,
    "retry_count": 1
  },
  "meta": {
