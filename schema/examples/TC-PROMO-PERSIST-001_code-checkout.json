{
  "test_id": "TC-PROMO-PERSIST-001",
  "name": "Promotion-Code bleibt im Checkout erhalten",
  "category": "e2e",
  "priority": "P1",
  "functional_area": "Feature Promotion",
  "schema_version": "3.0.0",
  "scope": {
    "environments": [
      "staging"
    ],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Produkt ist verfuegbar",
    "Promotion-Code TEST20 ist aktiv"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Produkt in den Warenkorb hinzufuegen",
      "expected": "Schritt erfolgreich ausgefuehrt",
      "inputs": [
        {
          "action": "navigate",
          "value_ref": "product:shirt_bio.path"
        },
        {
          "action": "click",
          "selector": "button.btn-buy"
        }
      ]
    },
    {
      "step": 2,
      "action": "Code TEST20 eingeben",
      "expected": "Schritt erfolgreich ausgefuehrt",
      "inputs": [
        {
          "action": "fill",
          "selector": "input[name='promotionCode']",
          "value_ref": "promo:test_discount.code"
        },
        {
          "action": "click",
          "selector": "button:has-text('Einloesen')"
        }
      ]
    },
    {
      "step": 3,
      "action": "Zur Kasse navigieren",
      "expected": "Schritt erfolgreich ausgefuehrt",
      "inputs": [
        {
          "action": "navigate",
          "value": "/checkout/confirm"
        }
      ]
    },
    {
      "step": 4,
      "action": "Rabatt im Checkout pruefen",
      "expected": "Schritt erfolgreich ausgefuehrt"
    }
  ],
  "test_data": [
    {
      "type": "channel",
      "name": "AT"
    },
    {
      "type": "channel",
      "name": "DE"
    },
    {
      "type": "channel",
      "name": "CH"
    },
    {
      "type": "extra",
      "name": "default",
      "promo_code": "TEST20"
    },
    {
      "type": "product",
      "name": "shirt_bio",
      "path": "/p/kurzarmshirt-aus-bio-baumwolle/ge-p-862990",
      "product_name": "Kurzarmshirt aus Bio-Baumwolle",
      "article_number": "862990"
    },
    {
      "type": "promo",
      "name": "test_discount",
      "code": "TEST20",
      "description": "Test-Rabattcode 20%"
    }
  ],
  "automation": {
    "status": "planned",
    "framework": "Playwright + pytest",
    "repo": "GE-ECommerce-Testing",
    "spec_file": "playwright_tests/tests/test_promotions.py",
    "function_name": "test_promo_persists_through_checkout",
    "tags": [
      "promotions"
    ]
  },
  "orchestration": {
    "parallel_safe": false,
    "timeout_seconds": 45,
    "retry_count": 1
  },
  "meta": {
    "author": "QA Team",
    "created": "2026-02-03",
    "last_modified": "2026-02-03",
    "version": "1.0"
  }
}
