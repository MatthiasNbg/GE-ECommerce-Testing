{
  "test_id": "TC-SEARCH-008",
  "name": "Suchvorschläge zeigen Kategorie-Vorschläge",
  "category": "feature",
  "priority": "P1",
  "schema_version": "1.0.0",
  "scope": {
    "channels": ["AT", "DE", "CH"],
    "environments": ["staging", "production"],
    "shop_system": "Shopware 6"
  },
  "preconditions": [
    "Shop ist erreichbar",
    "Suchfunktion ist aktiv"
  ],
  "steps": [
    {
      "step": 1,
      "action": "Suchfeld öffnen",
      "expected": "Suchfeld wird sichtbar",
      "selector_hint": "button.search-toggle-btn",
      "inputs": [{"action": "click", "selector": "button.search-toggle-btn.js-search-toggle-btn"}]
    },
    {
      "step": 2,
      "action": "\"bett\" eingeben",
      "expected": "Text wird im Suchfeld angezeigt",
      "selector_hint": "input#header-main-search-input",
      "inputs": [{"action": "fill", "selector": "input#header-main-search-input", "value": "bett"}]
    },
    {
      "step": 3,
      "action": "Suchvorschläge prüfen",
      "expected": "Suchvorschläge-Container erscheint",
      "inputs": [{"action": "wait", "selector": ".search-suggest, .ns-autocomplete"}]
    },
    {
      "step": 4,
      "action": "Kategorie-Vorschläge suchen",
      "expected": "Mindestens ein Kategorie-Vorschlag wird angezeigt",
      "selector_hint": ".search-suggest-category, a[href*='/c/']"
    }
  ],
  "test_data": {
    "search_term": "bett"
  },
  "automation": {
    "status": "automated",
    "framework": "Playwright + pytest",
    "repo": "GE-ECommerce-Testing",
    "spec_file": "playwright_tests/tests/test_search.py",
    "function_name": "test_search_suggest_shows_categories",
    "tags": ["search", "nosto"]
  },
  "orchestration": {
    "parallel_safe": true,
    "timeout_seconds": 30,
